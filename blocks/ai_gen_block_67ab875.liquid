<div class="ai-you-may-like-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-you-may-like__container-{{ ai_gen_id }}">
    <div class="ai-you-may-like__header-{{ ai_gen_id }}">
      {% if block.settings.section_title != blank %}
        <h2 class="ai-you-may-like__heading-{{ ai_gen_id }}">{{ block.settings.section_title }}</h2>
      {% endif %}

      {% if block.settings.show_view_all and block.settings.view_all_link != blank %}
        <button class="ai-you-may-like__view-all-wrapper-{{ ai_gen_id }}" onclick="window.location.href='{{ block.settings.view_all_link }}'">
          <span class="ai-you-may-like__button-shadow-{{ ai_gen_id }}"></span>
          <span class="ai-you-may-like__button-edge-{{ ai_gen_id }}"></span>
          <span class="ai-you-may-like__view-all-{{ ai_gen_id }}">
            {{ block.settings.view_all_text }}
            <svg class="ai-you-may-like__view-all-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </span>
        </button>
      {% endif %}
    </div>

    {% if block.settings.collection != blank %}
      <div class="ai-you-may-like__grid-{{ ai_gen_id }}">
        {% assign products_to_show_desktop = block.settings.products_limit_desktop %}
        {% assign products_to_show_mobile = block.settings.products_limit_mobile %}
        
        {% for product in block.settings.collection.products limit: products_to_show_desktop %}
          <div class="ai-you-may-like__product-card-{{ ai_gen_id }}" data-product-index="{{ forloop.index }}">
            <a href="{{ product.url }}" class="ai-you-may-like__image-wrapper-{{ ai_gen_id }}">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 600 }}"
                  alt="{{ product.featured_image.alt | default: product.title | escape }}"
                  class="ai-you-may-like__image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="600"
                  height="600"
                >
              {% else %}
                <div class="ai-you-may-like__image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </a>

            <div class="ai-you-may-like__info-{{ ai_gen_id }}">
              {% if block.settings.show_vendor and product.vendor != blank %}
                <div class="ai-you-may-like__vendor-{{ ai_gen_id }}">{{ product.vendor }}</div>
              {% endif %}

              <h3 class="ai-you-may-like__title-{{ ai_gen_id }}">
                <a href="{{ product.url }}" class="ai-you-may-like__title-link-{{ ai_gen_id }}">
                  {{ product.title }}
                </a>
              </h3>

              <div class="ai-you-may-like__price-wrapper-{{ ai_gen_id }}">
                <span class="ai-you-may-like__price-{{ ai_gen_id }}">
                  {{ product.price | money }}
                </span>

                {% if product.compare_at_price > product.price %}
                  <span class="ai-you-may-like__compare-price-{{ ai_gen_id }}">
                    {{ product.compare_at_price | money }}
                  </span>
                  {% if block.settings.show_sale_badge %}
                    <span class="ai-you-may-like__badge-{{ ai_gen_id }}">
                      {{ block.settings.sale_badge_label }}
                    </span>
                  {% endif %}
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <div class="ai-you-may-like__empty-state-{{ ai_gen_id }}">
        {{ 'collection-1' | placeholder_svg_tag }}
        <p>Select a collection to display products</p>
      </div>
    {% endif %}
  </div>
</div>

<script>
  (function() {
    function handleProductVisibility{{ ai_gen_id }}() {
      const isMobile = window.innerWidth <= 749;
      const mobileLimit = {{ block.settings.products_limit_mobile }};
      const cards = document.querySelectorAll('.ai-you-may-like__product-card-{{ ai_gen_id }}');
      
      cards.forEach((card, index) => {
        if (isMobile && index >= mobileLimit) {
          card.style.display = 'none';
        } else {
          card.style.display = 'block';
        }
      });
    }

    handleProductVisibility{{ ai_gen_id }}();
    window.addEventListener('resize', handleProductVisibility{{ ai_gen_id }});
  })();
</script>

