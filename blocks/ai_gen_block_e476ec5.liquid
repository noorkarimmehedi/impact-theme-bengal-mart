{% doc %}
  @prompt
    Design Prompt:
    Create a clean, minimalist shipping benefits section with three columns on a white background:
    Column 1 (Left):
    
    Icon: Simple line art storefront/shop icon in black
    Heading: "Ships in 1-2" (in sans-serif font, medium weight)
    Subheading: "business days" (same font, slightly smaller)
    
    Column 2 (Center):
    
    Icon: Simple line art 3D box/package icon in black
    Heading: "Free US Shipping" (in sans-serif font, medium weight)
    Subheading: "over $50" (same font, slightly smaller)
    
    Column 3 (Right):
    
    Icon: Simple line art circular arrows/refresh icon in black (indicating returns/exchanges)
    Heading: "30 Day Returns" (in sans-serif font, medium weight)
    Subheading: "& Exchanges" (same font, slightly smaller)
    
    Style specifications:
    
    All icons are minimalist line drawings with consistent stroke weight
    Icons are centered above text
    Text is center-aligned under each icon
    Clean spacing between icon and text
    Modern, professional appearance
    Black icons and text on white background
    Equal spacing between all three columns, in mobile version all should be in same row 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-shipping-benefits-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding }}px 20px;
  }

  .ai-shipping-benefits-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-shipping-benefits-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.column_gap }}px;
    align-items: start;
  }

  .ai-shipping-benefit-item-{{ ai_gen_id }} {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: {{ block.settings.icon_text_gap }}px;
  }

  .ai-shipping-benefit-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    color: {{ block.settings.icon_color }};
    flex-shrink: 0;
  }

  .ai-shipping-benefit-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    stroke-width: {{ block.settings.icon_stroke_width }};
  }

  .ai-shipping-benefit-text-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: {{ block.settings.text_gap }}px;
  }

  .ai-shipping-benefit-heading-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0;
    line-height: 1.2;
  }

  .ai-shipping-benefit-subheading-{{ ai_gen_id }} {
    font-family: {{ block.settings.subheading_font.family }}, {{ block.settings.subheading_font.fallback_families }};
    font-weight: {{ block.settings.subheading_font.weight }};
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0;
    line-height: 1.3;
  }

  @media screen and (max-width: 768px) {
    .ai-shipping-benefits-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_section_padding }}px 15px;
    }

    .ai-shipping-benefits-grid-{{ ai_gen_id }} {
      gap: {{ block.settings.mobile_gap }}px;
    }

    .ai-shipping-benefit-item-{{ ai_gen_id }} {
      gap: {{ block.settings.mobile_icon_text_gap }}px;
    }

    .ai-shipping-benefit-icon-{{ ai_gen_id }} {
      width: {{ block.settings.mobile_icon_size }}px;
      height: {{ block.settings.mobile_icon_size }}px;
    }

    .ai-shipping-benefit-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_heading_size }}px;
    }

    .ai-shipping-benefit-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_subheading_size }}px;
    }
  }
{% endstyle %}

<div class="ai-shipping-benefits-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-shipping-benefits-container-{{ ai_gen_id }}">
    <div class="ai-shipping-benefits-grid-{{ ai_gen_id }}">
      <div class="ai-shipping-benefit-item-{{ ai_gen_id }}">
        <div class="ai-shipping-benefit-icon-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path d="M3 7v10a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2H5a2 2 0 0 0-2 2z"/>
            <polyline points="9,22 9,12 15,12 15,22"/>
          </svg>
        </div>
        <div class="ai-shipping-benefit-text-{{ ai_gen_id }}">
          <h3 class="ai-shipping-benefit-heading-{{ ai_gen_id }}">{{ block.settings.benefit_1_heading }}</h3>
          <p class="ai-shipping-benefit-subheading-{{ ai_gen_id }}">{{ block.settings.benefit_1_subheading }}</p>
        </div>
      </div>

      <div class="ai-shipping-benefit-item-{{ ai_gen_id }}">
        <div class="ai-shipping-benefit-icon-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
            <polyline points="3.27,6.96 12,12.01 20.73,6.96"/>
            <line x1="12" y1="22.08" x2="12" y2="12"/>
          </svg>
        </div>
        <div class="ai-shipping-benefit-text-{{ ai_gen_id }}">
          <h3 class="ai-shipping-benefit-heading-{{ ai_gen_id }}">{{ block.settings.benefit_2_heading }}</h3>
          <p class="ai-shipping-benefit-subheading-{{ ai_gen_id }}">{{ block.settings.benefit_2_subheading }}</p>
        </div>
      </div>

      <div class="ai-shipping-benefit-item-{{ ai_gen_id }}">
        <div class="ai-shipping-benefit-icon-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <polyline points="23,4 23,10 17,10"/>
            <polyline points="1,20 1,14 7,14"/>
            <path d="M20.49 9A9 9 0 0 0 5.64 5.64L1 10m22 4l-4.64 4.36A9 9 0 0 1 3.51 15"/>
          </svg>
        </div>
        <div class="ai-shipping-benefit-text-{{ ai_gen_id }}">
          <h3 class="ai-shipping-benefit-heading-{{ ai_gen_id }}">{{ block.settings.benefit_3_heading }}</h3>
          <p class="ai-shipping-benefit-subheading-{{ ai_gen_id }}">{{ block.settings.benefit_3_subheading }}</p>
        </div>
      </div>
    </div>
  </div>
</div>

