{% comment %}
  Premium E-commerce Footer
  Design: Clean, minimal footer with boxed link sections
  Features: Scrolling marquee, logo, 2x2 box grid, copyright, social bar
{% endcomment %}

{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-premium-footer-{{ ai_gen_id }} {
    width: 100%;
    font-family: {{ block.settings.body_font.family }}, {{ block.settings.body_font.fallback_families }};
    font-weight: {{ block.settings.body_font.weight }};
  }

  .ai-premium-footer__marquee-{{ ai_gen_id }} {
    background-color: {{ block.settings.marquee_bg_color }};
    overflow: hidden;
    padding: 12px 0;
    position: relative;
    border: 1px solid #000000;
    border-radius: 0;
  }

  .ai-premium-footer__marquee-content-{{ ai_gen_id }} {
    display: flex;
    white-space: nowrap;
    animation: ai-premium-footer-scroll-{{ ai_gen_id }} {{ block.settings.scroll_speed }}s linear infinite;
  }

  .ai-premium-footer__marquee-text-{{ ai_gen_id }} {
    color: {{ block.settings.marquee_text_color }};
    font-size: {{ block.settings.marquee_font_size }}px;
    font-weight: 500;
    letter-spacing: 3px;
    padding: 0 40px;
    font-family: {{ block.settings.marquee_font.family }}, {{ block.settings.marquee_font.fallback_families }};
    font-weight: {{ block.settings.marquee_font.weight }};
    font-style: {{ block.settings.marquee_font.style }};
  }

  @keyframes ai-premium-footer-scroll-{{ ai_gen_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .ai-premium-footer__main-{{ ai_gen_id }} {
    background-color: {{ block.settings.main_bg_color }};
    padding: {{ block.settings.main_padding_top }}px 20px {{ block.settings.main_padding_bottom }}px;
  }

  .ai-premium-footer__content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 40px;
  }

  .ai-premium-footer__logo-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.logo_margin_bottom }}px;
  }

  .ai-premium-footer__logo-image-{{ ai_gen_id }} {
    max-width: {{ block.settings.logo_width }}px;
    height: auto;
    display: inline-block;
  }

  .ai-premium-footer__logo-text-{{ ai_gen_id }} {
    font-family: {{ block.settings.logo_font.family }}, {{ block.settings.logo_font.fallback_families }};
    font-size: {{ block.settings.logo_font_size_mobile }}px;
    font-weight: {{ block.settings.logo_font.weight }};
    font-style: {{ block.settings.logo_font.style }};
    color: {{ block.settings.logo_color }};
    letter-spacing: {{ block.settings.logo_letter_spacing }}px;
    margin: 0;
  }

  .ai-premium-footer__box-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.box_gap }}px;
    max-width: 600px;
    margin: 0 auto;
  }

  .ai-premium-footer__box-{{ ai_gen_id }} {
    background-color: {{ block.settings.box_bg_color }};
    border: {{ block.settings.box_border_width }}px solid {{ block.settings.box_border_color }};
    padding: {{ block.settings.box_padding }}px;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    cursor: pointer;
    text-decoration: none;
    aspect-ratio: 1;
  }

  .ai-premium-footer__box-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.box_hover_bg_color }};
    border-color: {{ block.settings.box_hover_border_color }};
    transform: translateY(-2px);
  }

  .ai-premium-footer__box-text-{{ ai_gen_id }} {
    color: {{ block.settings.box_text_color }};
    font-size: {{ block.settings.box_font_size }}px;
    font-weight: {{ block.settings.box_font_weight }};
    letter-spacing: {{ block.settings.box_letter_spacing }}px;
    margin: 0;
    font-family: {{ block.settings.box_font.family }}, {{ block.settings.box_font.fallback_families }};
    line-height: 1.3;
  }

  .ai-premium-footer__box-{{ ai_gen_id }}:hover .ai-premium-footer__box-text-{{ ai_gen_id }} {
    color: {{ block.settings.box_hover_text_color }};
  }

  .ai-premium-footer__copyright-wrapper-{{ ai_gen_id }} {
    text-align: center;
  }

  .ai-premium-footer__copyright-{{ ai_gen_id }} {
    color: {{ block.settings.copyright_color }};
    font-size: {{ block.settings.copyright_font_size }}px;
    letter-spacing: 1px;
    margin: 0 0 {{ block.settings.credit_spacing }}px;
    font-family: {{ block.settings.copyright_font.family }}, {{ block.settings.copyright_font.fallback_families }};
    font-weight: {{ block.settings.copyright_font.weight }};
    font-style: {{ block.settings.copyright_font.style }};
  }

  .ai-premium-footer__credit-{{ ai_gen_id }} {
    color: {{ block.settings.credit_color }};
    font-size: {{ block.settings.credit_font_size }}px;
    letter-spacing: 0.5px;
    margin: 0;
    font-family: {{ block.settings.copyright_font.family }}, {{ block.settings.copyright_font.fallback_families }};
    font-weight: {{ block.settings.copyright_font.weight }};
    font-style: {{ block.settings.copyright_font.style }};
  }

  .ai-premium-footer__credit-link-{{ ai_gen_id }} {
    color: {{ block.settings.credit_link_color }};
    text-decoration: underline;
    transition: opacity 0.3s ease;
  }

  .ai-premium-footer__credit-link-{{ ai_gen_id }}:hover {
    opacity: 0.7;
  }

  .ai-premium-footer__bottom-bar-{{ ai_gen_id }} {
    background-color: {{ block.settings.bottom_bar_bg_color }};
    padding: {{ block.settings.bottom_bar_padding }}px 20px;
    margin-top: {{ block.settings.bottom_bar_margin_top }}px;
  }

  .ai-premium-footer__social-links-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: {{ block.settings.social_link_spacing }}px;
    flex-wrap: wrap;
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-premium-footer__social-left-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.social_link_spacing }}px;
  }

  .ai-premium-footer__social-right-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.social_link_spacing }}px;
  }

  .ai-premium-footer__social-link-{{ ai_gen_id }} {
    color: {{ block.settings.social_link_color }};
    text-decoration: none;
    font-size: {{ block.settings.social_link_font_size }}px;
    font-weight: 500;
    letter-spacing: 2px;
    transition: opacity 0.3s ease;
    font-family: {{ block.settings.social_link_font.family }}, {{ block.settings.social_link_font.fallback_families }};
    font-weight: {{ block.settings.social_link_font.weight }};
    font-style: {{ block.settings.social_link_font.style }};
  }

  .ai-premium-footer__social-link-{{ ai_gen_id }}:hover {
    opacity: 0.7;
  }

  @media screen and (max-width: 749px) {
    .ai-premium-footer__marquee-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.marquee_font_size | times: 0.8 }}px;
    }

    .ai-premium-footer__box-grid-{{ ai_gen_id }} {
      gap: {{ block.settings.box_gap | times: 0.7 }}px;
    }

    .ai-premium-footer__box-{{ ai_gen_id }} {
