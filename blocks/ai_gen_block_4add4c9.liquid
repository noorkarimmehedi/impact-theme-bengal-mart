    }

    .ai-premium-footer__box-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.box_font_size | times: 0.85 }}px;
    }

    .ai-premium-footer__social-links-{{ ai_gen_id }} {
      gap: {{ block.settings.social_link_spacing | times: 0.7 }}px;
    }

    .ai-premium-footer__social-left-{{ ai_gen_id }} {
      gap: {{ block.settings.social_link_spacing | times: 0.7 }}px;
    }

    .ai-premium-footer__social-right-{{ ai_gen_id }} {
      gap: {{ block.settings.social_link_spacing | times: 0.7 }}px;
    }

    .ai-premium-footer__social-link-{{ ai_gen_id }} {
      font-size: {{ block.settings.social_link_font_size | times: 0.8 }}px;
    }
  }

  @media screen and (min-width: 750px) {
    .ai-premium-footer__content-{{ ai_gen_id }} {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-start;
      max-width: 1200px;
      margin: 0 auto;
      gap: 60px;
    }

    .ai-premium-footer__left-section-{{ ai_gen_id }} {
      flex: 0 0 auto;
      max-width: 350px;
    }

    .ai-premium-footer__logo-{{ ai_gen_id }} {
      text-align: left;
      margin-bottom: {{ block.settings.logo_margin_bottom }}px;
    }

    .ai-premium-footer__logo-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.logo_font_size_desktop }}px;
    }

    .ai-premium-footer__logo-image-{{ ai_gen_id }} {
      max-width: {{ block.settings.logo_width_desktop }}px;
    }

    .ai-premium-footer__copyright-wrapper-{{ ai_gen_id }} {
      text-align: left;
    }

    .ai-premium-footer__box-grid-{{ ai_gen_id }} {
      flex: 1;
      max-width: 700px;
    }
  }
{% endstyle %}

<footer class="ai-premium-footer-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-premium-footer__marquee-{{ ai_gen_id }}">
    <div class="ai-premium-footer__marquee-content-{{ ai_gen_id }}">
      {% for i in (1..20) %}
        <span class="ai-premium-footer__marquee-text-{{ ai_gen_id }}">{{ block.settings.marquee_text }}</span>
      {% endfor %}
    </div>
  </div>

  <div class="ai-premium-footer__main-{{ ai_gen_id }}">
    <div class="ai-premium-footer__content-{{ ai_gen_id }}">
      <div class="ai-premium-footer__left-section-{{ ai_gen_id }}">
        <div class="ai-premium-footer__logo-{{ ai_gen_id }}">
          {% if block.settings.logo_image != blank %}
            <img
              src="{{ block.settings.logo_image | image_url: width: 600 }}"
              alt="{{ block.settings.brand_name | escape }}"
              class="ai-premium-footer__logo-image-{{ ai_gen_id }}"
              loading="lazy"
            >
          {% elsif block.settings.brand_name != blank %}
            <h2 class="ai-premium-footer__logo-text-{{ ai_gen_id }}">{{ block.settings.brand_name }}</h2>
          {% endif %}
        </div>

        <div class="ai-premium-footer__copyright-wrapper-{{ ai_gen_id }}">
          <p class="ai-premium-footer__copyright-{{ ai_gen_id }}">{{ block.settings.copyright_text }}</p>
          <p class="ai-premium-footer__credit-{{ ai_gen_id }}">
            Website designed and developed by 
            {% if block.settings.arc_lab_url != blank %}
              <a href="{{ block.settings.arc_lab_url }}" class="ai-premium-footer__credit-link-{{ ai_gen_id }}" target="_blank" rel="noopener">Arc Lab Technology</a>
            {% else %}
              <span class="ai-premium-footer__credit-link-{{ ai_gen_id }}">Arc Lab Technology</span>
            {% endif %}
          </p>
        </div>
      </div>

      <div class="ai-premium-footer__box-grid-{{ ai_gen_id }}">
        {% if block.settings.box_1_text != blank %}
          <a href="{{ block.settings.box_1_url }}" class="ai-premium-footer__box-{{ ai_gen_id }}">
            <p class="ai-premium-footer__box-text-{{ ai_gen_id }}">{{ block.settings.box_1_text }}</p>
          </a>
        {% endif %}
        
        {% if block.settings.box_2_text != blank %}
          <a href="{{ block.settings.box_2_url }}" class="ai-premium-footer__box-{{ ai_gen_id }}">
            <p class="ai-premium-footer__box-text-{{ ai_gen_id }}">{{ block.settings.box_2_text }}</p>
          </a>
        {% endif %}
        
        {% if block.settings.box_3_text != blank %}
          <a href="{{ block.settings.box_3_url }}" class="ai-premium-footer__box-{{ ai_gen_id }}">
            <p class="ai-premium-footer__box-text-{{ ai_gen_id }}">{{ block.settings.box_3_text }}</p>
          </a>
        {% endif %}
        
        {% if block.settings.box_4_text != blank %}
          <a href="{{ block.settings.box_4_url }}" class="ai-premium-footer__box-{{ ai_gen_id }}">
            <p class="ai-premium-footer__box-text-{{ ai_gen_id }}">{{ block.settings.box_4_text }}</p>
          </a>
        {% endif %}
      </div>
    </div>
  </div>

  <div class="ai-premium-footer__bottom-bar-{{ ai_gen_id }}">
    <div class="ai-premium-footer__social-links-{{ ai_gen_id }}">
      <div class="ai-premium-footer__social-left-{{ ai_gen_id }}">
        {% if block.settings.social_link_1_text != blank %}
          <a href="{{ block.settings.social_link_1_url }}" class="ai-premium-footer__social-link-{{ ai_gen_id }}" target="_blank" rel="noopener">
            {{ block.settings.social_link_1_text }}
          </a>
        {% endif %}
      </div>
      <div class="ai-premium-footer__social-right-{{ ai_gen_id }}">
        {% if block.settings.social_link_2_text != blank %}
          <a href="{{ block.settings.social_link_2_url }}" class="ai-premium-footer__social-link-{{ ai_gen_id }}" target="_blank" rel="noopener">
            {{ block.settings.social_link_2_text }}
          </a>
        {% endif %}
        {% if block.settings.social_link_3_text != blank %}
          <a href="{{ block.settings.social_link_3_url }}" class="ai-premium-footer__social-link-{{ ai_gen_id }}" target="_blank" rel="noopener">
            {{ block.settings.social_link_3_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</footer>

