{% doc %}
  @prompt
    build me a text with icon section
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-text-icon-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-text-icon-container-{{ ai_gen_id }} {
    display: flex;
    align-items: {{ block.settings.alignment }};
    gap: {{ block.settings.spacing }}px;
    flex-direction: {% if block.settings.icon_position == 'left' %}row{% elsif block.settings.icon_position == 'right' %}row-reverse{% elsif block.settings.icon_position == 'top' %}column{% else %}column-reverse{% endif %};
    {% if block.settings.icon_position == 'top' or block.settings.icon_position == 'bottom' %}
      text-align: center;
    {% endif %}
  }

  .ai-text-icon-icon-wrapper-{{ ai_gen_id }} {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    background-color: {{ block.settings.icon_background }};
    border-radius: {% if block.settings.icon_shape == 'circle' %}50%{% elsif block.settings.icon_shape == 'rounded' %}{{ block.settings.icon_border_radius }}px{% else %}0{% endif %};
  }

  .ai-text-icon-icon-wrapper-{{ ai_gen_id }} svg {
    width: {{ block.settings.icon_size | times: 0.6 }}px;
    height: {{ block.settings.icon_size | times: 0.6 }}px;
    stroke: {{ block.settings.icon_color }};
    fill: none;
    stroke-width: {{ block.settings.icon_stroke_width }};
  }

  .ai-text-icon-content-{{ ai_gen_id }} {
    flex: 1;
  }

  .ai-text-icon-heading-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
  }

  .ai-text-icon-text-{{ ai_gen_id }} {
    margin: 0;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
  }

  @media screen and (max-width: 749px) {
    .ai-text-icon-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px {{ block.settings.padding_horizontal | times: 0.7 }}px {{ block.settings.padding_bottom | times: 0.7 }}px;
    }

    .ai-text-icon-container-{{ ai_gen_id }} {
      gap: {{ block.settings.spacing | times: 0.8 }}px;
    }

    .ai-text-icon-icon-wrapper-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.8 }}px;
      height: {{ block.settings.icon_size | times: 0.8 }}px;
    }

    .ai-text-icon-icon-wrapper-{{ ai_gen_id }} svg {
      width: {{ block.settings.icon_size | times: 0.6 | times: 0.8 }}px;
      height: {{ block.settings.icon_size | times: 0.6 | times: 0.8 }}px;
    }

    .ai-text-icon-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.85 }}px;
    }

    .ai-text-icon-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-text-icon-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-text-icon-container-{{ ai_gen_id }}">
    <div class="ai-text-icon-icon-wrapper-{{ ai_gen_id }}">
      {% case block.settings.icon %}
        {% when 'check' %}
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="20 6 9 17 4 12"></polyline>
          </svg>
        {% when 'star' %}
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
            <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
          </svg>
        {% when 'heart' %}
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
          </svg>
        {% when 'truck' %}
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
            <rect x="1" y="3" width="15" height="13"></rect>
            <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon>
            <circle cx="5.5" cy="18.5" r="2.5"></circle>
            <circle cx="18.5" cy="18.5" r="2.5"></circle>
          </svg>
        {% when 'shield' %}
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
          </svg>
        {% when 'gift' %}
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="20 12 20 22 4 22 4 12"></polyline>
            <rect x="2" y="7" width="20" height="5"></rect>
            <line x1="12" y1="22" x2="12" y2="7"></line>
            <path d="M12 7H7.5a2.5 2.5 0 0 1 0-5C11 2 12 7 12 7z"></path>
            <path d="M12 7h4.5a2.5 2.5 0 0 0 0-5C13 2 12 7 12 7z"></path>
          </svg>
        {% when 'clock' %}
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"></circle>
            <polyline points="12 6 12 12 16 14"></polyline>
          </svg>
        {% when 'tag' %}
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"></path>
            <line x1="7" y1="7" x2="7.01" y2="7"></line>
          </svg>
        {% when 'info' %}
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="12" y1="16" x2="12" y2="12"></line>
            <line x1="12" y1="8" x2="12.01" y2="8"></line>
          </svg>
        {% when 'thumbs_up' %}
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
            <path d="M14 9V5a3 3 0 0 0-3-3l-4 9v11h11.28a2 2 0 0 0 2-1.7l1.38-9a2 2 0 0 0-2-2.3zM7 22H4a2 2 0 0 1-2-2v-7a2 2 0 0 1 2-2h3"></path>
          </svg>
        {% when 'package' %}
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
            <line x1="16.5" y1="9.4" x2="7.5" y2="4.21"></line>
            <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
            <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
            <line x1="12" y1="22.08" x2="12" y2="12"></line>
          </svg>
        {% when 'award' %}
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="8" r="7"></circle>
            <polyline points="8.21 13.89 7 23 12 20 17 23 15.79 13.88"></polyline>
          </svg>
      {% endcase %}
    </div>
    <div class="ai-text-icon-content-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h3 class="ai-text-icon-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h3>
      {% endif %}
      {% if block.settings.text != blank %}
        <div class="ai-text-icon-text-{{ ai_gen_id }}">{{ block.settings.text }}</div>
      {% endif %}
    </div>
  </div>
</div>

