{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .search-container-{{ ai_gen_id }} {
    display: flex;
    min-height: 50vh;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.padding_top }}px 20px {{ block.settings.padding_bottom }}px;
    background: {{ block.settings.background_color }};
    position: relative;
    overflow: hidden;
  }

  .search-wrapper-{{ ai_gen_id }} {
    width: 100%;
    max-width: 600px;
    position: relative;
    z-index: 10;
  }

  .search-heading-{{ ai_gen_id }} {
    text-align: center;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 700;
    margin-bottom: {{ block.settings.heading_spacing }}px;
    background: linear-gradient(135deg, #8B5CF6 0%, #EC4899 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .search-form-{{ ai_gen_id }} {
    position: relative;
    width: 240px;
    margin: 0 auto;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .search-form-{{ ai_gen_id }}.focused {
    width: 340px;
    transform: scale(1.05);
  }

  .search-input-wrapper-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    align-items: center;
    background: rgba(255, 255, 255, 0.3);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(229, 231, 235, 0.5);
    border-radius: 50px;
    overflow: visible;
    box-shadow: 0 0 0 rgba(0, 0, 0, 0);
    transition: all 0.3s ease;
  }

  .search-input-wrapper-{{ ai_gen_id }}.focused {
    background: rgba(255, 255, 255, 0.95);
    border-color: transparent;
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
  }

  .search-input-wrapper-{{ ai_gen_id }}.clicked {
    box-shadow: 0 0 40px rgba(139, 92, 246, 0.5), inset 0 0 15px rgba(236, 72, 153, 0.7);
    animation: pulseClick-{{ ai_gen_id }} 0.8s ease-out;
  }

  @keyframes pulseClick-{{ ai_gen_id }} {
    0% { transform: scale(1); }
    50% { transform: scale(1.02); }
    100% { transform: scale(1); }
  }

  .search-gradient-bg-{{ ai_gen_id }} {
    position: absolute;
    inset: 0;
    z-index: -1;
    opacity: 0;
    border-radius: 50px;
    background: linear-gradient(90deg, #f6d365 0%, #fda085 100%);
    transition: opacity 0.3s ease;
    animation: gradientShift-{{ ai_gen_id }} 15s linear infinite;
  }

  .search-input-wrapper-{{ ai_gen_id }}.focused .search-gradient-bg-{{ ai_gen_id }} {
    opacity: 0.15;
  }

  @keyframes gradientShift-{{ ai_gen_id }} {
    0% { background: linear-gradient(90deg, #f6d365 0%, #fda085 100%); }
    33% { background: linear-gradient(90deg, #a1c4fd 0%, #c2e9fb 100%); }
    66% { background: linear-gradient(90deg, #d4fc79 0%, #96e6a1 100%); }
    100% { background: linear-gradient(90deg, #f6d365 0%, #fda085 100%); }
  }

  .search-particles-{{ ai_gen_id }} {
    position: absolute;
    inset: 0;
    border-radius: 50px;
    overflow: hidden;
    pointer-events: none;
    z-index: 1;
  }

  .particle-{{ ai_gen_id }} {
    position: absolute;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: linear-gradient(to right, #a78bfa, #ec4899);
    filter: blur(2px);
    opacity: 0;
    animation: float-{{ ai_gen_id }} 3s ease-in-out infinite;
  }

  @keyframes float-{{ ai_gen_id }} {
    0%, 100% { opacity: 0; transform: translate(0, 0) scale(0); }
    50% { opacity: 0.8; transform: translate(var(--tx), var(--ty)) scale(1); }
  }

  .search-icon-{{ ai_gen_id }} {
    padding: 0 16px;
    display: flex;
    align-items: center;
    color: #6b7280;
    transition: all 0.3s ease;
    z-index: 2;
  }

  .search-input-wrapper-{{ ai_gen_id }}.focused .search-icon-{{ ai_gen_id }} {
    color: #8B5CF6;
  }

  .search-input-wrapper-{{ ai_gen_id }}.searching .search-icon-{{ ai_gen_id }} svg {
    animation: wiggle-{{ ai_gen_id }} 0.6s ease-in-out;
  }

  @keyframes wiggle-{{ ai_gen_id }} {
    0%, 100% { transform: rotate(0deg) scale(1); }
    15% { transform: rotate(-15deg) scale(1.3); }
    30% { transform: rotate(15deg) scale(1.3); }
    45% { transform: rotate(-10deg) scale(1.3); }
    60% { transform: rotate(10deg) scale(1.3); }
    75% { transform: rotate(0deg) scale(1); }
  }

  .search-input-{{ ai_gen_id }} {
    flex: 1;
    padding: 14px 16px;
    background: transparent;
    border: none;
    outline: none;
    font-size: 16px;
    font-weight: 500;
    color: #374151;
    z-index: 2;
  }

  .search-input-{{ ai_gen_id }}::placeholder {
    color: #9ca3af;
  }

  .search-input-wrapper-{{ ai_gen_id }}.focused .search-input-{{ ai_gen_id }} {
    color: #1f2937;
    letter-spacing: 0.02em;
  }

  .search-submit-{{ ai_gen_id }} {
    padding: 10px 20px;
    margin-right: 8px;
    background: linear-gradient(to right, #8B5CF6, #EC4899);
    color: white;
    font-size: 14px;
    font-weight: 600;
    border: none;
    border-radius: 50px;
    cursor: pointer;
    opacity: 0;
    transform: scale(0.8) translateX(-20px);
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(139, 92, 246, 0.3);
    z-index: 2;
  }

  .search-submit-{{ ai_gen_id }}.visible {
    opacity: 1;
    transform: scale(1) translateX(0);
  }

  .search-submit-{{ ai_gen_id }}:hover {
    transform: scale(1.05);
    box-shadow: 0 10px 25px rgba(139, 92, 246, 0.5);
  }

  .search-submit-{{ ai_gen_id }}:active {
    transform: scale(0.95);
  }

  .search-suggestions-{{ ai_gen_id }} {
    position: absolute;
    top: calc(100% + 8px);
    left: 0;
    right: 0;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(229, 231, 235, 0.5);
    border-radius: 16px;
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
    max-height: 300px;
    overflow-y: auto;
    z-index: 100;
    opacity: 0;
    transform: translateY(10px);
    pointer-events: none;
    transition: all 0.2s ease;
  }

  .search-suggestions-{{ ai_gen_id }}.visible {
    opacity: 1;
    transform: translateY(0);
    pointer-events: all;
  }

  .suggestion-item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 16px;
    cursor: pointer;
    transition: all 0.2s ease;
    border-bottom: 1px solid rgba(229, 231, 235, 0.3);
    opacity: 0;
    transform: translateY(-10px);
    animation: slideIn-{{ ai_gen_id }} 0.3s ease forwards;
  }

  @keyframes slideIn-{{ ai_gen_id }} {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .suggestion-item-{{ ai_gen_id }}:last-child {
    border-bottom: none;
  }

  .suggestion-item-{{ ai_gen_id }}:hover {
    background: rgba(139, 92, 246, 0.05);
  }

  .suggestion-icon-{{ ai_gen_id }} {
    width: 16px;
    height: 16px;
    color: #a78bfa;
    transition: all 0.2s ease;
  }

  .suggestion-item-{{ ai_gen_id }}:hover .suggestion-icon-{{ ai_gen_id }} {
    color: #8B5CF6;
    transform: scale(1.1);
  }

  .suggestion-image-{{ ai_gen_id }} {
    width: 50px;
    height: 50px;
    border-radius: 8px;
    object-fit: cover;
    background: #f3f4f6;
  }

  .suggestion-info-{{ ai_gen_id }} {
    flex: 1;
  }

  .suggestion-title-{{ ai_gen_id }} {
    font-size: 14px;
    font-weight: 600;
    color: #374151;
    margin-bottom: 2px;
  }

  .suggestion-price-{{ ai_gen_id }} {
    font-size: 13px;
    font-weight: 700;
    color: #8B5CF6;
  }

  .loading-{{ ai_gen_id }} {
    text-align: center;
    padding: 24px;
    color: #6b7280;
  }

  .loading-dots-{{ ai_gen_id }} {
    display: inline-flex;
    gap: 8px;
  }

  .loading-dot-{{ ai_gen_id }} {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #8B5CF6;
    animation: bounce-{{ ai_gen_id }} 1s ease-in-out infinite;
  }

  .loading-dot-{{ ai_gen_id }}:nth-child(2) {
    animation-delay: 0.15s;
  }

  .loading-dot-{{ ai_gen_id }}:nth-child(3) {
    animation-delay: 0.3s;
  }

  @keyframes bounce-{{ ai_gen_id }} {
    0%, 60%, 100% { transform: translateY(0); opacity: 0.4; }
    30% { transform: translateY(-10px); opacity: 1; }
  }

  .shimmer-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
    animation: shimmer-{{ ai_gen_id }} 2s infinite;
    pointer-events: none;
    z-index: 3;
  }

  @keyframes shimmer-{{ ai_gen_id }} {
    0% { left: -100%; }
    100% { left: 100%; }
  }

  @media (max-width: 768px) {
    .search-form-{{ ai_gen_id }} {
      width: 100%;
      max-width: 280px;
    }

    .search-form-{{ ai_gen_id }}.focused {
      width: 100%;
      max-width: 320px;
    }

    .search-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }
  }
{% endstyle %}

<div class="search-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="search-wrapper-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="search-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <form class="search-form-{{ ai_gen_id }}" id="searchForm{{ ai_gen_id }}">
      <div class="search-input-wrapper-{{ ai_gen_id }}" id="searchWrapper{{ ai_gen_id }}">
        <div class="search-gradient-bg-{{ ai_gen_id }}"></div>
        <div class="search-particles-{{ ai_gen_id }}" id="particles{{ ai_gen_id }}"></div>
        <div class="shimmer-{{ ai_gen_id }}" id="shimmer{{ ai_gen_id }}" style="display: none;"></div>
        
        <div class="search-icon-{{ ai_gen_id }}">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.35-4.35"></path>
          </svg>
        </div>

        <input
          type="text"
          class="search-input-{{ ai_gen_id }}"
          id="searchInput{{ ai_gen_id }}"
          placeholder="{{ block.settings.placeholder }}"
          autocomplete="off"
        >

        <button type="submit" class="search-submit-{{ ai_gen_id }}" id="searchSubmit{{ ai_gen_id }}">
          Search
        </button>
      </div>

      <div class="search-suggestions-{{ ai_gen_id }}" id="suggestions{{ ai_gen_id }}"></div>
    </form>
  </div>
</div>

<script>
(function() {
  const wrapper = document.getElementById('searchWrapper{{ ai_gen_id }}');
  const form = document.getElementById('searchForm{{ ai_gen_id }}');
  const input = document.getElementById('searchInput{{ ai_gen_id }}');
  const submit = document.getElementById('searchSubmit{{ ai_gen_id }}');
  const suggestions = document.getElementById('suggestions{{ ai_gen_id }}');
  const particles = document.getElementById('particles{{ ai_gen_id }}');
  const shimmer = document.getElementById('shimmer{{ ai_gen_id }}');
  
  let searchTimeout = null;
  let currentRequest = null;
  let isFocused = false;

  // Create particles
  function createParticles() {
    particles.innerHTML = '';
    if (!isFocused) return;
    
    for (let i = 0; i < 12; i++) {
      const particle = document.createElement('div');
      particle.className = 'particle-{{ ai_gen_id }}';
      particle.style.left = Math.random() * 100 + '%';
      particle.style.top = Math.random() * 100 + '%';
      particle.style.setProperty('--tx', (Math.random() - 0.5) * 40 + 'px');
      particle.style.setProperty('--ty', (Math.random() - 0.5) * 40 + 'px');
      particle.style.animationDelay = Math.random() * 3 + 's';
      particles.appendChild(particle);
    }
  }

  // Create click particles
  function createClickParticles(x, y) {
    const rect = wrapper.getBoundingClientRect();
    const relX = x - rect.left;
    const relY = y - rect.top;

    for (let i = 0; i < 12; i++) {
      const particle = document.createElement('div');
      particle.style.position = 'absolute';
      particle.style.width = '8px';
      particle.style.height = '8px';
      particle.style.borderRadius = '50%';
      particle.style.left = relX + 'px';
      particle.style.top = relY + 'px';
      particle.style.background = `rgba(${Math.random() * 255}, ${Math.random() * 200 + 55}, ${Math.random() * 255}, 0.8)`;
      particle.style.boxShadow = '0 0 8px rgba(255, 255, 255, 0.8)';
      particle.style.pointerEvents = 'none';
      particle.style.zIndex = '10';
      
      wrapper.appendChild(particle);

      const tx = (Math.random() - 0.5) * 160;
      const ty = (Math.random() - 0.5) * 160;
      const duration = Math.random() * 800 + 500;

      particle.animate([
        { transform: 'translate(0, 0) scale(0)', opacity: 1 },
        { transform: `translate(${tx}px, ${ty}px) scale(${Math.random() * 0.8 + 0.2})`, opacity: 0 }
      ], {
        duration: duration,
        easing: 'ease-out'
      });

      setTimeout(() => particle.remove(), duration);
    }
  }

  // Focus handlers
  input.addEventListener('focus', () => {
    isFocused = true;
    wrapper.classList.add('focused');
    form.classList.add('focused');
    createParticles();
    shimmer.style.display = 'block';
  });

  input.addEventListener('blur', () => {
    setTimeout(() => {
      isFocused = false;
      wrapper.classList.remove('focused');
      form.classList.remove('focused');
      suggestions.classList.remove('visible');
      particles.innerHTML = '';
      shimmer.style.display = 'none';
    }, 200);
  });

  // Click handler
  wrapper.addEventListener('click', (e) => {
    wrapper.classList.add('clicked');
    createClickParticles(e.clientX, e.clientY);
    setTimeout(() => wrapper.classList.remove('clicked'), 800);
  });

  // Input handler
  input.addEventListener('input', (e) => {
    const query = e.target.value.trim();
    
    if (query.length > 0) {
      submit.classList.add('visible');
    } else {
      submit.classList.remove('visible');
      suggestions.classList.remove('visible');
      return;
    }

    clearTimeout(searchTimeout);

    if (query.length < {{ block.settings.min_characters }}) {
      suggestions.classList.remove('visible');
      return;
    }

    searchTimeout = setTimeout(() => searchProducts(query), 300);
  });

  // Search function
  async function searchProducts(query) {
    if (currentRequest) currentRequest.abort();
    
    showLoading();
    currentRequest = new AbortController();

    try {
      const response = await fetch(
        `/search/suggest.json?q=${encodeURIComponent(query)}&resources[type]=product&resources[limit]={{ block.settings.max_results }}`,
        { signal: currentRequest.signal }
      );

      if (!response.ok) throw new Error('Search failed');

      const data = await response.json();
      displayResults(data.resources.results.products || []);
    } catch (error) {
      if (error.name !== 'AbortError') {
        suggestions.innerHTML = '<div class="loading-{{ ai_gen_id }}">Search failed. Please try again.</div>';
        suggestions.classList.add('visible');
      }
    } finally {
      currentRequest = null;
    }
  }

  // Show loading
  function showLoading() {
    suggestions.innerHTML = `
      <div class="loading-{{ ai_gen_id }}">
        <div class="loading-dots-{{ ai_gen_id }}">
          <span class="loading-dot-{{ ai_gen_id }}"></span>
          <span class="loading-dot-{{ ai_gen_id }}"></span>
          <span class="loading-dot-{{ ai_gen_id }}"></span>
        </div>
      </div>
    `;
    suggestions.classList.add('visible');
  }

  // Display results
  function displayResults(products) {
    if (products.length === 0) {
      suggestions.innerHTML = '<div class="loading-{{ ai_gen_id }}">No products found</div>';
      suggestions.classList.add('visible');
      return;
    }

    let html = '';
    products.forEach((product, index) => {
      const imageUrl = product.image ? getImageUrl(product.image) : '';
      const price = formatPrice(product.price);
      
      html += `
        <a href="${product.url}" class="suggestion-item-{{ ai_gen_id }}" style="animation-delay: ${index * 0.05}s">
          <svg class="suggestion-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"></circle>
            <circle cx="12" cy="12" r="3"></circle>
          </svg>
          ${imageUrl ? `<img src="${imageUrl}" alt="${escapeHtml(product.title)}" class="suggestion-image-{{ ai_gen_id }}">` : ''}
          <div class="suggestion-info-{{ ai_gen_id }}">
            <div class="suggestion-title-{{ ai_gen_id }}">${escapeHtml(product.title)}</div>
            <div class="suggestion-price-{{ ai_gen_id }}">${price}</div>
          </div>
        </a>
      `;
    });

    suggestions.innerHTML = html;
    suggestions.classList.add('visible');
  }

  // Helper functions
  function getImageUrl(url) {
    if (!url) return '';
    return url.includes('?') ? url.split('?')[0] + '?width=100' : url + '?width=100';
  }

  function formatPrice(cents) {
    if (typeof cents === 'string') return cents;
    if (typeof Shopify !== 'undefined' && Shopify.formatMoney) {
      return Shopify.formatMoney(cents, '{{ shop.money_format }}');
    }
    return '{{ shop.currency }}' + ' ' + (cents / 100).toFixed(2);
  }

  function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }

  // Form submit
  form.addEventListener('submit', (e) => {
    e.preventDefault();
    const query = input.value.trim();
    if (query.length >= {{ block.settings.min_characters }}) {
      wrapper.classList.add('searching');
      setTimeout(() => {
        window.location.href = `/search?q=${encodeURIComponent(query)}`;
      }, 600);
    }
  });
})();
</script>

