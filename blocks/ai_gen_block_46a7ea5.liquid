{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    min-height: {{ block.settings.height_mobile }}px;
    display: flex;
    align-items: flex-end;
    overflow: hidden;
    border: 2px solid #000000;
  }

  .ai-hero-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: {{ block.settings.image_fit_mobile }};
  }

  .ai-hero-image-desktop-{{ ai_gen_id }} {
    display: none;
  }

  .ai-hero-image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-hero-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-hero-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity }};
  }

  .ai-hero-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    width: 100%;
    padding: {{ block.settings.content_padding_mobile }}px 8px;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.content_spacing }}px;
  }

  .ai-hero-text-wrapper-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.text_spacing }}px;
    padding: 0;
    text-align: center;
  }

  .ai-hero-heading-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.heading_size_mobile }}px;
    font-weight: 900;
    color: {{ block.settings.heading_color }};
    line-height: 1.2;
    text-align: center;
    text-shadow: 0 0 1px {{ block.settings.heading_color }}, 0 0 1px {{ block.settings.heading_color }};
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  .ai-hero-subheading-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.subheading_size_mobile }}px;
    color: {{ block.settings.subheading_color }};
    line-height: 1.4;
    text-align: center;
  }

  .ai-hero-buttons-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.button_spacing }}px;
    width: 100%;
  }

  .ai-hero-button-{{ ai_gen_id }} {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal_mobile }}px;
    text-decoration: none;
    border-radius: 0;
    font-size: {{ block.settings.button_font_size }}px;
    transition: all 0.3s ease;
    border: 2px solid #000000;
    text-align: center;
    width: 100%;
  }

  .ai-hero-button-primary-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_primary_bg }};
    color: {{ block.settings.button_primary_color }};
    border-color: #000000;
  }

  .ai-hero-button-primary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_primary_hover_bg }};
    color: {{ block.settings.button_primary_hover_color }};
    border-color: #000000;
  }

  .ai-hero-button-secondary-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_secondary_bg }};
    color: {{ block.settings.button_secondary_color }};
    border-color: #000000;
  }

  .ai-hero-button-secondary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_secondary_hover_bg }};
    color: {{ block.settings.button_secondary_hover_color }};
    border-color: #000000;
  }

  .ai-hero-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (min-width: 750px) {
    .ai-hero-{{ ai_gen_id }} {
      min-height: {{ block.settings.height_desktop }}px;
      border: none;
    }

    .ai-hero-image-mobile-{{ ai_gen_id }} {
      display: none;
    }

    .ai-hero-image-desktop-{{ ai_gen_id }} {
      display: block;
      object-fit: {{ block.settings.image_fit_desktop }};
    }

    .ai-hero-content-{{ ai_gen_id }} {
      padding: {{ block.settings.content_padding_desktop }}px;
      {% if block.settings.content_alignment == 'left' %}
        align-items: flex-start;
      {% elsif block.settings.content_alignment == 'center' %}
        align-items: center;
      {% else %}
        align-items: flex-end;
      {% endif %}
    }

    .ai-hero-text-wrapper-{{ ai_gen_id }} {
      padding: 0;
      text-align: left;
    }

    .ai-hero-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size_desktop }}px;
      text-align: left;
    }

    .ai-hero-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size_desktop }}px;
      text-align: left;
    }

    .ai-hero-buttons-{{ ai_gen_id }} {
      flex-direction: row;
      width: auto;
      {% if block.settings.content_alignment == 'left' %}
        align-items: flex-start;
      {% elsif block.settings.content_alignment == 'center' %}
        align-items: center;
      {% else %}
        align-items: flex-end;
      {% endif %}
    }

    .ai-hero-button-{{ ai_gen_id }} {
      padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal_desktop }}px;
      width: auto;
    }
  }
{% endstyle %}

<div class="ai-hero-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.image_mobile or block.settings.image_desktop %}
    {% if block.settings.image_mobile %}
      <img
        src="{{ block.settings.image_mobile | image_url: width: 1000 }}"
        alt="{{ block.settings.image_mobile.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.image_mobile.width }}"
        height="{{ block.settings.image_mobile.height }}"
        class="ai-hero-image-{{ ai_gen_id }} ai-hero-image-mobile-{{ ai_gen_id }}"
      >
    {% endif %}
    {% if block.settings.image_desktop %}
      <img
        src="{{ block.settings.image_desktop | image_url: width: 2000 }}"
        alt="{{ block.settings.image_desktop.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.image_desktop.width }}"
        height="{{ block.settings.image_desktop.height }}"
        class="ai-hero-image-{{ ai_gen_id }} ai-hero-image-desktop-{{ ai_gen_id }}"
      >
    {% endif %}
  {% else %}
    <div class="ai-hero-image-placeholder-{{ ai_gen_id }}">
      {{ 'hero-apparel-1' | placeholder_svg_tag }}
      <div class="ai-hero-empty-state-{{ ai_gen_id }}">
        Next, add an image
      </div>
    </div>
  {% endif %}

  <div class="ai-hero-overlay-{{ ai_gen_id }}"></div>

  <div class="ai-hero-content-{{ ai_gen_id }}">
    <div class="ai-hero-text-wrapper-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-hero-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}

      {% if block.settings.subheading != blank %}
        <div class="ai-hero-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
      {% endif %}
    </div>

    <div class="ai-hero-buttons-{{ ai_gen_id }}">
      {% if block.settings.button_primary_label != blank %}
        <a
          href="{{ block.settings.button_primary_link }}"
          class="ai-hero-button-{{ ai_gen_id }} ai-hero-button-primary-{{ ai_gen_id }}"
        >
          {{ block.settings.button_primary_label }}
        </a>
      {% endif %}

      {% if block.settings.button_secondary_label != blank %}
        <a
          href="{{ block.settings.button_secondary_link }}"
          class="ai-hero-button-{{ ai_gen_id }} ai-hero-button-secondary-{{ ai_gen_id }}"
        >
          {{ block.settings.button_secondary_label }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

