{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  {{ block.settings.title_font | font_face: font_display: 'swap' }}

  .ai-category-section-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 18px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-category-title-wrapper-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
    position: relative;
    display: inline-block;
    width: 100%;
  }

  .ai-category-title-button-{{ ai_gen_id }} {
    position: relative;
    display: inline-flex;
    align-items: center;
    text-align: center;
    transition: 0.3s ease-in-out;
    cursor: pointer;
    background-color: {{ block.settings.title_background_color }};
    filter: url(#handDrawnNoise-{{ ai_gen_id }});
    user-select: none;
    font-family: {{ block.settings.title_font.family }}, {{ block.settings.title_font.fallback_families }};
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.title_text_color }};
    font-weight: 700;
    padding: 0.5em 1.5em;
    margin: 0 0 12px;
    border-width: 0px;
    border-radius: 4px;
    box-shadow: {{ block.settings.title_shadow_color }} 4px 4px 0 1px;
    animation: idle-{{ ai_gen_id }} 1s infinite ease-in-out;
  }

  .ai-category-title-button-{{ ai_gen_id }}:hover {
    rotate: -2.5deg;
    animation: hover-{{ ai_gen_id }} 2.5s infinite ease-in-out;
  }

  .ai-category-title-button-{{ ai_gen_id }}:hover .ai-highlight-{{ ai_gen_id }} {
    stroke-dashoffset: 0;
  }

  .ai-category-title-button-{{ ai_gen_id }}:active {
    box-shadow: inset {{ block.settings.title_shadow_color }} 4px 4px 0 1px;
    rotate: -2.5deg;
    animation: active-{{ ai_gen_id }} 1s infinite ease-in-out;
  }

  .ai-category-title-button-{{ ai_gen_id }}:active .ai-highlight-{{ ai_gen_id }} {
    stroke-dashoffset: 1000;
    animation: highlight-{{ ai_gen_id }} 5s infinite, col-{{ ai_gen_id }} 0.5s forwards;
    stroke: {{ block.settings.title_shadow_color }};
  }

  .ai-highlight-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    fill: rgba(213, 0, 0, 0.2);
    stroke: rgba(213, 0, 0, 0.5);
    stroke-width: 10;
    stroke-linecap: round;
    pointer-events: none;
    stroke-dasharray: 1000;
    stroke-dashoffset: 1000;
    transition: stroke-dashoffset 0.5s ease-in-out;
  }

  .ai-button-cosm-{{ ai_gen_id }} {
    fill: {{ block.settings.star_color }};
    transition: 0.3s ease-out;
    scale: 0.5;
    position: absolute;
    translate: calc(-100% + 24px) 1.5rem;
  }

  .ai-category-title-button-{{ ai_gen_id }}:hover .ai-button-cosm-{{ ai_gen_id }} {
    rotate: -15deg;
    translate: calc(-100% + 22px) 1.9rem;
  }

  .ai-category-title-button-{{ ai_gen_id }}:active .ai-button-cosm-{{ ai_gen_id }} {
    fill: {{ block.settings.title_shadow_color }};
    rotate: -135deg;
    translate: calc(-100% + 55px) 1.6rem;
    animation: none;
  }

  @keyframes idle-{{ ai_gen_id }} {
    0% {
      filter: url(#handDrawnNoise-{{ ai_gen_id }});
    }
    50% {
      rotate: 2.5deg;
      filter: url(#handDrawnNoise2-{{ ai_gen_id }});
    }
    100% {
      filter: url(#handDrawnNoise-{{ ai_gen_id }});
    }
  }

  @keyframes hover-{{ ai_gen_id }} {
    0% {
      rotate: 0deg;
      filter: url(#handDrawnNoise-{{ ai_gen_id }});
      translate: 0 0px;
    }
    25% {
      rotate: -1deg;
      filter: url(#handDrawnNoise2-{{ ai_gen_id }});
      translate: 0 -2px;
    }
    50% {
      rotate: 0deg;
      filter: url(#handDrawnNoise-{{ ai_gen_id }});
      translate: 0 2px;
    }
    75% {
      rotate: -1deg;
      filter: url(#handDrawnNoise2-{{ ai_gen_id }});
      translate: 0 -2px;
    }
    100% {
      rotate: 0deg;
      filter: url(#handDrawnNoise-{{ ai_gen_id }});
      translate: 0 0px;
    }
  }

  @keyframes active-{{ ai_gen_id }} {
    0% {
      filter: url(#handDrawnNoiset-{{ ai_gen_id }});
      translate: 0 -1px;
    }
    25% {
      rotate: -3deg;
    }
    50% {
      filter: url(#handDrawnNoiset2-{{ ai_gen_id }});
      translate: 0 1px;
    }
    66% {
      rotate: 1.5deg;
    }
    100% {
      filter: url(#handDrawnNoiset-{{ ai_gen_id }});
      translate: 0 -1px;
    }
  }

  @keyframes col-{{ ai_gen_id }} {
    0% {
      stroke: rgba(213, 0, 0, 0.5);
    }
    100% {
      stroke: rgba(213, 0, 0, 0.8);
    }
  }

  @keyframes highlight-{{ ai_gen_id }} {
    0% {
      stroke-dashoffset: 0;
    }
    25% {
      stroke-dashoffset: 1000;
    }
    50% {
      stroke-dashoffset: 1000;
    }
    100% {
      stroke-dashoffset: 0;
    }
  }

  .ai-category-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0;
  }

  .ai-category-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.gap_mobile }}px;
    max-width: 100%;
  }

  .ai-category-item-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    box-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity | divided_by: 100.0 }});
    transition: all 0.3s ease;
  }

  {% if block.settings.image_aspect_ratio == 'square' %}
    .ai-category-item-{{ ai_gen_id }} {
      aspect-ratio: 1;
    }
  {% elsif block.settings.image_aspect_ratio == 'portrait' %}
    .ai-category-item-{{ ai_gen_id }} {
      aspect-ratio: 3 / 4;
    }
  {% elsif block.settings.image_aspect_ratio == 'landscape' %}
    .ai-category-item-{{ ai_gen_id }} {
      aspect-ratio: 4 / 3;
    }
  {% endif %}

  .ai-category-item-{{ ai_gen_id }}:hover {
    border-color: {{ block.settings.hover_border_color }};
    transform: translateY(-4px);
  }

  .ai-category-link-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    height: 100%;
    position: relative;
    text-decoration: none;
  }

  .ai-category-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .ai-category-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-category-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-category-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-category-overlay-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 12px;
    background: linear-gradient(to top, rgba(0, 0, 0, {{ block.settings.overlay_background_opacity | divided_by: 100.0 }}), transparent);
    color: {{ block.settings.overlay_text_color }};
    text-align: center;
    font-size: 14px;
    font-weight: 600;
    z-index: 2;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5);
  }

  .ai-category-desktop-slider-{{ ai_gen_id }} {
    display: none;
  }

  .ai-category-arrow-{{ ai_gen_id }} {
    display: none;
  }

  @media screen and (max-width: 749px) {
    .ai-category-title-button-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }
  }

  @media screen and (min-width: 750px) {
    .ai-category-section-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top }}px 16px {{ block.settings.padding_bottom }}px;
    }

    .ai-category-grid-{{ ai_gen_id }} {
      display: none;
    }

    .ai-category-desktop-slider-{{ ai_gen_id }} {
      display: block;
      position: relative;
      max-width: 100%;
      margin: 0 auto;
      padding: 0 60px;
    }

    .ai-category-slider-wrapper-{{ ai_gen_id }} {
      overflow: hidden;
    }

    .ai-category-slider-track-{{ ai_gen_id }} {
      display: flex;
      gap: {{ block.settings.gap_desktop }}px;
      transition: transform 0.4s ease;
    }

    .ai-category-slider-item-{{ ai_gen_id }} {
      flex: 0 0 calc((100% - ({{ block.settings.gap_desktop }}px * 3)) / 4);
      min-width: 0;
    }

    .ai-category-arrow-{{ ai_gen_id }} {
      display: flex;
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      width: 44px;
      height: 44px;
      border-radius: 50%;
      background-color: {{ block.settings.arrow_background }};
      color: {{ block.settings.arrow_color }};
      border: none;
      cursor: pointer;
      align-items: center;
      justify-content: center;
      z-index: 10;
      transition: all 0.3s ease;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    }

    .ai-category-arrow-{{ ai_gen_id }}:hover {
      background-color: {{ block.settings.arrow_hover_background }};
      transform: translateY(-50%) scale(1.1);
    }

    .ai-category-arrow-{{ ai_gen_id }}:disabled {
      opacity: 0.3;
      cursor: not-allowed;
    }

    .ai-category-arrow-{{ ai_gen_id }}:disabled:hover {
      transform: translateY(-50%) scale(1);
    }

    .ai-category-arrow-prev-{{ ai_gen_id }} {
      left: 0px;
    }

    .ai-category-arrow-next-{{ ai_gen_id }} {
      right: 0px;
    }

    .ai-category-arrow-{{ ai_gen_id }} svg {
      width: 20px;
      height: 20px;
    }

    .ai-category-overlay-{{ ai_gen_id }} {
      font-size: 16px;
      padding: 16px;
    }
  }
{% endstyle %}

<!-- SVG Filters for hand-drawn effect -->
<svg style="position: absolute; width: 0; height: 0;">
  <defs>
    <filter id="handDrawnNoise-{{ ai_gen_id }}">
      <feTurbulence type="fractalNoise" baseFrequency="0.05" numOctaves="3" result="noise"/>
      <feDisplacementMap in="SourceGraphic" in2="noise" scale="2" xChannelSelector="R" yChannelSelector="G"/>
    </filter>
    <filter id="handDrawnNoise2-{{ ai_gen_id }}">
      <feTurbulence type="fractalNoise" baseFrequency="0.06" numOctaves="3" result="noise"/>
      <feDisplacementMap in="SourceGraphic" in2="noise" scale="2.5" xChannelSelector="R" yChannelSelector="G"/>
    </filter>
    <filter id="handDrawnNoiset-{{ ai_gen_id }}">
      <feTurbulence type="fractalNoise" baseFrequency="0.04" numOctaves="3" result="noise"/>
      <feDisplacementMap in="SourceGraphic" in2="noise" scale="3" xChannelSelector="R" yChannelSelector="G"/>
    </filter>
    <filter id="handDrawnNoiset2-{{ ai_gen_id }}">
      <feTurbulence type="fractalNoise" baseFrequency="0.07" numOctaves="3" result="noise"/>
      <feDisplacementMap in="SourceGraphic" in2="noise" scale="2" xChannelSelector="R" yChannelSelector="G"/>
    </filter>
  </defs>
</svg>

<div class="ai-category-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.section_title != blank or block.settings.subheading != blank %}
    <div class="ai-category-title-wrapper-{{ ai_gen_id }}">
      {% if block.settings.section_title != blank %}
        <h2 class="ai-category-title-button-{{ ai_gen_id }}">
          <svg class="ai-highlight-{{ ai_gen_id }}" viewBox="0 0 200 60" preserveAspectRatio="none">
            <path d="M5,30 Q50,10 100,30 T195,30" fill="none"/>
          </svg>
          <svg class="ai-button-cosm-{{ ai_gen_id }}" width="30" height="30" viewBox="0 0 200 200">
            <path d="M100,10 L120,60 L170,70 L130,110 L140,160 L100,135 L60,160 L70,110 L30,70 L80,60 Z"/>
          </svg>
          {{ block.settings.section_title }}
        </h2>
      {% endif %}
      {% if block.settings.subheading != blank %}
        <p class="ai-category-subtitle-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
      {% endif %}
    </div>
  {% endif %}

  <div class="ai-category-grid-{{ ai_gen_id }}">
    {% for i in (1..12) %}
      {% assign collection_key = 'collection_' | append: i %}
      {% assign image_key = 'custom_image_' | append: i %}
      {% assign hide_key = 'hide_collection_' | append: i %}
      
      {% assign collection = block.settings[collection_key] %}
      {% assign custom_image = block.settings[image_key] %}
      {% assign hide_collection = block.settings[hide_key] %}

      {% unless hide_collection %}
        {% if collection != blank %}
          <div class="ai-category-item-{{ ai_gen_id }}">
            <a href="{{ collection.url }}" class="ai-category-link-{{ ai_gen_id }}">
              <div class="ai-category-image-wrapper-{{ ai_gen_id }}">
                {% if custom_image != blank %}
                  <img
                    src="{{ custom_image | image_url: width: 500 }}"
                    alt="{{ collection.title | escape }}"
                    class="ai-category-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="500"
                    height="500"
                  >
                {% elsif collection.featured_image != blank %}
                  <img
                    src="{{ collection.featured_image | image_url: width: 500 }}"
                    alt="{{ collection.title | escape }}"
                    class="ai-category-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="500"
                    height="500"
                  >
                {% elsif collection.image %}
                  <img
                    src="{{ collection.image | image_url: width: 500 }}"
                    alt="{{ collection.image.alt | escape }}"
                    class="ai-category-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="500"
                    height="500"
                  >
                {% elsif collection.products.first and collection.products.first.featured_image %}
                  <img
                    src="{{ collection.products.first.featured_image | image_url: width: 500 }}"
                    alt="{{ collection.products.first.featured_image.alt | escape }}"
                    class="ai-category-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="500"
                    height="500"
                  >
                {% else %}
                  <div class="ai-category-placeholder-{{ ai_gen_id }}">
                    {{ 'collection-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>
              {% if block.settings.show_overlay_text %}
                <div class="ai-category-overlay-{{ ai_gen_id }}">
                  {{ collection.title }}
                </div>
              {% endif %}
            </a>
          </div>
        {% endif %}
      {% endunless %}
    {% endfor %}
  </div>

  <category-slider-{{ ai_gen_id }} class="ai-category-desktop-slider-{{ ai_gen_id }}">
    <button class="ai-category-arrow-{{ ai_gen_id }} ai-category-arrow-prev-{{ ai_gen_id }}" aria-label="Previous">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="15 18 9 12 15 6"></polyline>
      </svg>
    </button>

    <div class="ai-category-slider-wrapper-{{ ai_gen_id }}">
      <div class="ai-category-slider-track-{{ ai_gen_id }}">
        {% for i in (1..12) %}
          {% assign collection_key = 'collection_' | append: i %}
          {% assign image_key = 'custom_image_' | append: i %}
          {% assign hide_key = 'hide_collection_' | append: i %}
          
          {% assign collection = block.settings[collection_key] %}
          {% assign custom_image = block.settings[image_key] %}
          {% assign hide_collection = block.settings[hide_key] %}

          {% unless hide_collection %}
            {% if collection != blank %}
              <div class="ai-category-item-{{ ai_gen_id }} ai-category-slider-item-{{ ai_gen_id }}">
                <a href="{{ collection.url }}" class="ai-category-link-{{ ai_gen_id }}">
                  <div class="ai-category-image-wrapper-{{ ai_gen_id }}">
                    {% if custom_image != blank %}
                      <img
                        src="{{ custom_image | image_url: width: 500 }}"
                        alt="{{ collection.title | escape }}"
                        class="ai-category-image-{{ ai_gen_id }}"
                        loading="lazy"
                        width="500"
                        height="500"
                      >
                    {% elsif collection.featured_image != blank %}
                      <img
                        src="{{ collection.featured_image | image_url: width: 500 }}"
                        alt="{{ collection.title | escape }}"
                        class="ai-category-image-{{ ai_gen_id }}"
                        loading="lazy"
                        width="500"
                        height="500"
                      >
                    {% elsif collection.image %}
                      <img
                        src="{{ collection.image | image_url: width: 500 }}"
                        alt="{{ collection.image.alt | escape }}"
                        class="ai-category-image-{{ ai_gen_id }}"
                        loading="lazy"
                        width="500"
                        height="500"
                      >
                    {% elsif collection.products.first and collection.products.first.featured_image %}
                      <img
                        src="{{ collection.products.first.featured_image | image_url: width: 500 }}"
                        alt="{{ collection.products.first.featured_image.alt | escape }}"
                        class="ai-category-image-{{ ai_gen_id }}"
                        loading="lazy"
                        width="500"
                        height="500"
                      >
                    {% else %}
                      <div class="ai-category-placeholder-{{ ai_gen_id }}">
                        {{ 'collection-1' | placeholder_svg_tag }}
                      </div>
                    {% endif %}
                  </div>
                  {% if block.settings.show_overlay_text %}
                    <div class="ai-category-overlay-{{ ai_gen_id }}">
                      {{ collection.title }}
                    </div>
                  {% endif %}
                </a>
              </div>
            {% endif %}
          {% endunless %}
        {% endfor %}
      </div>
    </div>

    <button class="ai-category-arrow-{{ ai_gen_id }} ai-category-arrow-next-{{ ai_gen_id }}" aria-label="Next">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="9 18 15 12 9 6"></polyline>
      </svg>
    </button>
  </category-slider-{{ ai_gen_id }}>
</div>

<script>
  (function() {
    class CategorySlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentIndex = 0;
        this.itemsPerView = 4;
        this.gap = {{ block.settings.gap_desktop }};
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-category-slider-track-{{ ai_gen_id }}');
        this.items = this.querySelectorAll('.ai-category-slider-item-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-category-arrow-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-category-arrow-next-{{ ai_gen_id }}');

        this.totalItems = this.items.length;
        this.maxIndex = Math.max(0, this.totalItems - this.itemsPerView);

        this.prevButton.addEventListener('click', () => this.slide(-1));
        this.nextButton.addEventListener('click', () => this.slide(1));

        this.updateButtons();
        
        window.addEventListener('resize', () => this.updateSlider());
      }

      slide(direction) {
        this.currentIndex += direction;
        this.currentIndex = Math.max(0, Math.min(this.currentIndex, this.maxIndex));
        this.updateSlider();
      }

      updateSlider() {
        if (this.items.length === 0) return;
        const itemWidth = this.items[0].offsetWidth;
        const offset = -(this.currentIndex * (itemWidth + this.gap));
        this.track.style.transform = 'translateX(' + offset + 'px)';
        this.updateButtons();
      }

      updateButtons() {
        this.prevButton.disabled = this.currentIndex === 0;
        this.nextButton.disabled = this.currentIndex >= this.maxIndex;
      }
    }

    customElements.define('category-slider-{{ ai_gen_id }}', CategorySlider{{ ai_gen_id }});
  })();
</script>

