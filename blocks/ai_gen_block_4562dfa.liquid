{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-tab-accordion-{{ ai_gen_id }} {
    width: 100%;
    max-width: 100%;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    background-color: {{ block.settings.card_background }};
    box-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity }});
    transition: border-color 0.3s ease;
    overflow: hidden;
  }

  .ai-tab-accordion-{{ ai_gen_id }}:hover {
    border-color: {{ block.settings.hover_border_color }};
  }

  .ai-tab-header-{{ ai_gen_id }} {
    display: flex;
    border-bottom: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    background-color: {{ block.settings.header_background }};
  }

  .ai-tab-button-{{ ai_gen_id }} {
    flex: 1;
    padding: {{ block.settings.tab_padding }}px;
    background: none;
    border: none;
    border-right: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    cursor: pointer;
    font-size: {{ block.settings.tab_font_size }}px;
    font-weight: {{ block.settings.tab_font_weight }};
    color: {{ block.settings.tab_color }};
    transition: background-color 0.3s ease, color 0.3s ease;
    text-align: center;
  }

  .ai-tab-button-{{ ai_gen_id }}:last-child {
    border-right: none;
  }

  .ai-tab-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.tab_hover_background }};
  }

  .ai-tab-button-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.tab_active_background }};
    color: {{ block.settings.tab_active_color }};
    font-weight: {{ block.settings.tab_active_font_weight }};
  }

  .ai-tab-content-wrapper-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-tab-content-{{ ai_gen_id }} {
    display: none;
    padding: {{ block.settings.content_padding }}px;
    color: {{ block.settings.content_color }};
    font-size: {{ block.settings.content_font_size }}px;
    line-height: 1.6;
    animation: ai-tab-fade-{{ ai_gen_id }} 0.3s ease;
  }

  .ai-tab-content-{{ ai_gen_id }}.active {
    display: block;
  }

  @keyframes ai-tab-fade-{{ ai_gen_id }} {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-tab-button-{{ ai_gen_id }} {
      font-size: {{ block.settings.tab_font_size | times: 0.9 }}px;
      padding: {{ block.settings.tab_padding | times: 0.8 }}px;
    }

    .ai-tab-content-{{ ai_gen_id }} {
      padding: {{ block.settings.content_padding | times: 0.8 }}px;
    }
  }
{% endstyle %}

<tab-accordion-{{ ai_gen_id }} class="ai-tab-accordion-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-tab-header-{{ ai_gen_id }}">
    <button class="ai-tab-button-{{ ai_gen_id }} active" data-tab="1" aria-selected="true">
      {{ block.settings.tab_1_title }}
    </button>
    <button class="ai-tab-button-{{ ai_gen_id }}" data-tab="2" aria-selected="false">
      {{ block.settings.tab_2_title }}
    </button>
    <button class="ai-tab-button-{{ ai_gen_id }}" data-tab="3" aria-selected="false">
      {{ block.settings.tab_3_title }}
    </button>
  </div>

  <div class="ai-tab-content-wrapper-{{ ai_gen_id }}">
    <div class="ai-tab-content-{{ ai_gen_id }} active" data-content="1">
      {{ block.settings.tab_1_content }}
    </div>
    <div class="ai-tab-content-{{ ai_gen_id }}" data-content="2">
      {{ block.settings.tab_2_content }}
    </div>
    <div class="ai-tab-content-{{ ai_gen_id }}" data-content="3">
      {{ block.settings.tab_3_content }}
    </div>
  </div>
</tab-accordion-{{ ai_gen_id }}>

<script>
  (function() {
    class TabAccordion{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.tabs = this.querySelectorAll('.ai-tab-button-{{ ai_gen_id }}');
        this.contents = this.querySelectorAll('.ai-tab-content-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.tabs.forEach((tab) => {
          tab.addEventListener('click', () => {
            const tabNumber = tab.getAttribute('data-tab');
            
            this.tabs.forEach((t) => {
              t.classList.remove('active');
              t.setAttribute('aria-selected', 'false');
            });
            
            this.contents.forEach((c) => {
              c.classList.remove('active');
            });
            
            tab.classList.add('active');
            tab.setAttribute('aria-selected', 'true');
            
            const activeContent = this.querySelector(`[data-content="${tabNumber}"]`);
            if (activeContent) {
              activeContent.classList.add('active');
            }
          });
        });
      }
    }

    customElements.define('tab-accordion-{{ ai_gen_id }}', TabAccordion{{ ai_gen_id }});
  })();
</script>

