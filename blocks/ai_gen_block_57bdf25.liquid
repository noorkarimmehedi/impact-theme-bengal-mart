<you-may-also-like-{{ ai_gen_id }}>
  <div class="ai-you-may-like-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
    <div class="ai-you-may-like-container-{{ ai_gen_id }}">
      <div class="ai-you-may-like-header-{{ ai_gen_id }}">
        <h2 class="ai-you-may-like-title-{{ ai_gen_id }}">{{ block.settings.section_title }}</h2>
        {% if block.settings.button_link != blank %}
          <a href="{{ block.settings.button_link }}" class="ai-you-may-like-button-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </a>
        {% endif %}
      </div>

      {% if block.settings.collection != blank and block.settings.collection.products.size > 0 %}
        <div class="ai-you-may-like-grid-{{ ai_gen_id }}">
          {% for product in block.settings.collection.products limit: block.settings.products_to_show %}
            <div class="ai-you-may-like-card-{{ ai_gen_id }}">
              <a href="{{ product.url }}">
                <div class="ai-you-may-like-image-wrapper-{{ ai_gen_id }}">
                  {% if product.featured_image %}
                    <img
                      src="{{ product.featured_image | image_url: width: 800 }}"
                      alt="{{ product.featured_image.alt | escape }}"
                      class="ai-you-may-like-image-{{ ai_gen_id }}"
                      loading="lazy"
                      width="800"
                      height="800"
                    >
                  {% else %}
                    <div class="ai-you-may-like-placeholder-{{ ai_gen_id }}">
                      {{ 'product-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                </div>
              </a>

              <div class="ai-you-may-like-info-{{ ai_gen_id }}">
                <h3 class="ai-you-may-like-product-title-{{ ai_gen_id }}">
                  <a href="{{ product.url }}" style="color: inherit; text-decoration: none;">
                    {{ product.title }}
                  </a>
                </h3>
                <div class="ai-you-may-like-price-{{ ai_gen_id }}">
                  {% if product.compare_at_price > product.price %}
                    <span style="text-decoration: line-through; opacity: 0.6; margin-right: 8px;">
                      {{ product.compare_at_price | money }}
                    </span>
                  {% endif %}
                  {{ product.price | money }}
                </div>

                <div class="ai-you-may-like-button-wrapper-{{ ai_gen_id }}">
                  {% if product.available %}
                    <button
                      type="button"
                      class="ai-you-may-like-add-to-cart-{{ ai_gen_id }}"
                      data-product-id="{{ product.id }}"
                      data-variant-id="{{ product.selected_or_first_available_variant.id }}"
                    >
                      {{ block.settings.add_to_cart_text }}
                    </button>
                  {% else %}
                    <button
                      type="button"
                      class="ai-you-may-like-add-to-cart-{{ ai_gen_id }}"
                      disabled
                    >
                      Sold Out
                    </button>
                  {% endif %}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>

        {% if block.settings.show_bottom_button and block.settings.bottom_button_link != blank %}
          <div class="ai-you-may-like-bottom-button-wrapper-{{ ai_gen_id }}">
            <a href="{{ block.settings.bottom_button_link }}" class="ai-you-may-like-bottom-button-{{ ai_gen_id }}">
              {{ block.settings.bottom_button_text }}
            </a>
          </div>
        {% endif %}
      {% else %}
        <div class="ai-you-may-like-empty-{{ ai_gen_id }}">
          <p>Select a collection to display products</p>
        </div>
      {% endif %}
    </div>
  </div>
</you-may-also-like-{{ ai_gen_id }}>

<script>
  (function() {
    class YouMayAlsoLike extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.setupAddToCart();
      }

      setupAddToCart() {
        const buttons = this.querySelectorAll('.ai-you-may-like-add-to-cart-{{ ai_gen_id }}');

        buttons.forEach((button) => {
          button.addEventListener('click', async (e) => {
            e.preventDefault();
            e.stopPropagation();
            
            const variantId = button.getAttribute('data-variant-id');

            if (!variantId || button.disabled) return;

            button.disabled = true;
            const originalText = button.textContent;
            button.textContent = 'Adding...';

            try {
              const response = await fetch('/cart/add.js', {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json',
                  'Accept': 'application/json'
                },
                body: JSON.stringify({
                  items: [{
                    id: variantId,
                    quantity: 1
                  }]
                })
              });

              if (!response.ok) {
                throw new Error('Failed to add to cart');
              }

              const data = await response.json();
              button.textContent = 'Added!';
              
              // Trigger cart drawer/update
              document.documentElement.dispatchEvent(new CustomEvent('cart:refresh', {
                bubbles: true
              }));

              // Try multiple cart refresh methods
              if (typeof Shopify !== 'undefined' && Shopify.theme) {
                if (Shopify.theme.cart) {
                  Shopify.theme.cart.refresh();
                }
              }

              // Fetch request to update cart
              fetch('/cart.js')
                .then(res => res.json())
                .then(cart => {
                  window.dispatchEvent(new CustomEvent('cart:updated', { detail: cart }));
                });

              setTimeout(() => {
                button.textContent = originalText;
                button.disabled = false;
              }, 2000);

            } catch (error) {
              console.error('Error adding to cart:', error);
              button.textContent = 'Error';
              setTimeout(() => {
                button.textContent = originalText;
                button.disabled = false;
              }, 2000);
            }
          });
        });
      }
    }

    if (!customElements.get('you-may-also-like-{{ ai_gen_id }}')) {
      customElements.define('you-may-also-like-{{ ai_gen_id }}', YouMayAlsoLike);
    }
  })();
</script>

