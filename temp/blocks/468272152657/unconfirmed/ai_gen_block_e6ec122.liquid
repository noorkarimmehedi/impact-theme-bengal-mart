{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-accordion-tabs-{{ ai_gen_id }} {
    width: 100%;
  }

  .ai-accordion-tabs__header-{{ ai_gen_id }} {
    display: flex;
    gap: 0;
    background-color: {{ block.settings.header_background }};
    border-bottom: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    overflow-x: auto;
  }

  .ai-accordion-tabs__tab-button-{{ ai_gen_id }} {
    flex: 1;
    padding: {{ block.settings.tab_padding }}px {{ block.settings.tab_horizontal_padding }}px;
    background-color: transparent;
    color: {{ block.settings.tab_text_color }};
    border: none;
    border-bottom: {{ block.settings.active_border_width }}px solid transparent;
    cursor: pointer;
    font-size: {{ block.settings.tab_font_size }}px;
    font-weight: 500;
    transition: all 0.3s ease;
    white-space: nowrap;
    text-align: center;
  }

  .ai-accordion-tabs__tab-button-{{ ai_gen_id }}:hover {
    color: {{ block.settings.tab_hover_text_color }};
    background-color: {{ block.settings.tab_hover_background }};
  }

  .ai-accordion-tabs__tab-button-{{ ai_gen_id }}.active {
    color: {{ block.settings.active_tab_text_color }};
    background-color: {{ block.settings.active_tab_background }};
    border-bottom-color: {{ block.settings.active_border_color }};
  }

  .ai-accordion-tabs__content-wrapper-{{ ai_gen_id }} {
    background-color: {{ block.settings.content_background }};
  }

  .ai-accordion-tabs__content-{{ ai_gen_id }} {
    display: none;
    padding: {{ block.settings.content_padding }}px;
    color: {{ block.settings.content_text_color }};
    line-height: 1.6;
  }

  .ai-accordion-tabs__content-{{ ai_gen_id }}.active {
    display: block;
  }

  @media screen and (max-width: 749px) {
    .ai-accordion-tabs__tab-button-{{ ai_gen_id }} {
      font-size: {{ block.settings.tab_font_size | times: 0.9 }}px;
      padding: {{ block.settings.tab_padding | times: 0.8 }}px {{ block.settings.tab_horizontal_padding | times: 0.8 }}px;
    }
  }
{% endstyle %}

<product-accordion-tabs-{{ ai_gen_id }} class="ai-accordion-tabs-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-accordion-tabs__header-{{ ai_gen_id }}">
    <button
      class="ai-accordion-tabs__tab-button-{{ ai_gen_id }} active"
      data-tab="1"
      aria-expanded="true"
      aria-controls="ai-accordion-content-1-{{ ai_gen_id }}"
    >
      {{ block.settings.tab_1_title }}
    </button>
    <button
      class="ai-accordion-tabs__tab-button-{{ ai_gen_id }}"
      data-tab="2"
      aria-expanded="false"
      aria-controls="ai-accordion-content-2-{{ ai_gen_id }}"
    >
      {{ block.settings.tab_2_title }}
    </button>
    <button
      class="ai-accordion-tabs__tab-button-{{ ai_gen_id }}"
      data-tab="3"
      aria-expanded="false"
      aria-controls="ai-accordion-content-3-{{ ai_gen_id }}"
    >
      {{ block.settings.tab_3_title }}
    </button>
  </div>

  <div class="ai-accordion-tabs__content-wrapper-{{ ai_gen_id }}">
    <div
      id="ai-accordion-content-1-{{ ai_gen_id }}"
      class="ai-accordion-tabs__content-{{ ai_gen_id }} active"
      role="tabpanel"
    >
      {{ block.settings.tab_1_content }}
    </div>

    <div
      id="ai-accordion-content-2-{{ ai_gen_id }}"
      class="ai-accordion-tabs__content-{{ ai_gen_id }}"
      role="tabpanel"
    >
      {{ block.settings.tab_2_content }}
    </div>

    <div
      id="ai-accordion-content-3-{{ ai_gen_id }}"
      class="ai-accordion-tabs__content-{{ ai_gen_id }}"
      role="tabpanel"
    >
      {{ block.settings.tab_3_content }}
    </div>
  </div>
</product-accordion-tabs-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductAccordionTabs{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.tabButtons = this.querySelectorAll('.ai-accordion-tabs__tab-button-{{ ai_gen_id }}');
        this.tabContents = this.querySelectorAll('.ai-accordion-tabs__content-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.tabButtons.forEach((button) => {
          button.addEventListener('click', () => {
            const tabId = button.getAttribute('data-tab');
            this.switchTab(tabId);
          });
        });
      }

      switchTab(tabId) {
        this.tabButtons.forEach((btn) => {
          btn.classList.remove('active');
          btn.setAttribute('aria-expanded', 'false');
        });

        this.tabContents.forEach((content) => {
          content.classList.remove('active');
        });

        const activeButton = this.querySelector(`[data-tab="${tabId}"]`);
        const activeContent = this.querySelector(`#ai-accordion-content-${tabId}-{{ ai_gen_id }}`);

        if (activeButton && activeContent) {
          activeButton.classList.add('active');
          activeButton.setAttribute('aria-expanded', 'true');
          activeContent.classList.add('active');
        }
      }
    }

    customElements.define('product-accordion-tabs-{{ ai_gen_id }}', ProductAccordionTabs{{ ai_gen_id }});
  })();
</script>

