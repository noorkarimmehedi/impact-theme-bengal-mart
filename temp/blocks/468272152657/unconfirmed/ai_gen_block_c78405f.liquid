    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.section_background }};
    border: {{ block.settings.section_border_width }}px solid {{ block.settings.section_border_color }};
    opacity: {{ block.settings.section_opacity }};
  }

  .ai-coupon-slider-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-coupon-slider-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin-bottom: 24px;
    text-align: {{ block.settings.heading_alignment }};
  }

  .ai-coupon-slider-wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
  }

  .ai-coupon-slider-track-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.card_gap }}px;
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding: 10px 0;
  }

  .ai-coupon-slider-track-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none;
  }

  .ai-coupon-card-{{ ai_gen_id }} {
    flex: 0 0 auto;
    width: {{ block.settings.card_width }}px;
    background-color: {{ block.settings.card_background }};
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    transition: all 0.3s ease;
    box-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity }});
  }

  .ai-coupon-card-{{ ai_gen_id }}:hover {
    border-color: {{ block.settings.card_hover_border_color }};
    transform: translateY(-2px);
  }

  .ai-coupon-card-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_title_size }}px;
    color: {{ block.settings.card_title_color }};
    margin-bottom: 12px;
    font-weight: 600;
  }

  .ai-coupon-card-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_description_size }}px;
    color: {{ block.settings.card_description_color }};
    margin-bottom: 16px;
    line-height: 1.5;
  }

  .ai-coupon-code-wrapper-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 8px;
    background-color: {{ block.settings.code_background }};
    border: 1px dashed {{ block.settings.code_border_color }};
    border-radius: {{ block.settings.code_border_radius }}px;
    padding: 10px 12px;
  }

  .ai-coupon-code-{{ ai_gen_id }} {
    flex: 1;
    font-size: {{ block.settings.code_font_size }}px;
    color: {{ block.settings.code_text_color }};
    font-weight: 700;
    letter-spacing: 1px;
  }

  .ai-coupon-copy-btn-{{ ai_gen_id }} {
    background-color: {{ block.settings.copy_button_background }};
    color: {{ block.settings.copy_button_text_color }};
    border: none;
    border-radius: {{ block.settings.copy_button_border_radius }}px;
    padding: 6px 12px;
    font-size: 12px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    white-space: nowrap;
  }

  .ai-coupon-copy-btn-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.copy_button_hover_background }};
  }

  .ai-coupon-copy-btn-{{ ai_gen_id }}.copied {
    background-color: {{ block.settings.copy_button_success_background }};
  }

  .ai-coupon-nav-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 12px;
    margin-top: 24px;
  }

