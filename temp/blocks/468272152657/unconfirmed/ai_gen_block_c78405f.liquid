<coupon-slider-{{ ai_gen_id }} class="ai-coupon-slider-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-coupon-slider-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-coupon-slider-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-coupon-slider-wrapper-{{ ai_gen_id }}">
      <div class="ai-coupon-slider-track-{{ ai_gen_id }}" data-slider-track>
        {% for i in (1..5) %}
          {% liquid
            assign title_key = 'coupon_' | append: i | append: '_title'
            assign description_key = 'coupon_' | append: i | append: '_description'
            assign code_key = 'coupon_' | append: i | append: '_code'
            assign enabled_key = 'coupon_' | append: i | append: '_enabled'

            assign title = block.settings[title_key]
            assign description = block.settings[description_key]
            assign code = block.settings[code_key]
            assign enabled = block.settings[enabled_key]
          %}

          {% if enabled %}
            <div class="ai-coupon-card-{{ ai_gen_id }}">
              {% if title != blank %}
                <div class="ai-coupon-card-title-{{ ai_gen_id }}">{{ title }}</div>
              {% endif %}

              {% if description != blank %}
                <div class="ai-coupon-card-description-{{ ai_gen_id }}">{{ description }}</div>
              {% endif %}

              {% if code != blank %}
                <div class="ai-coupon-code-wrapper-{{ ai_gen_id }}">
                  <span class="ai-coupon-code-{{ ai_gen_id }}">{{ code }}</span>
                  <button
                    class="ai-coupon-copy-btn-{{ ai_gen_id }}"
                    data-code="{{ code }}"
                    aria-label="Copy coupon code"
                  >
                    {{ block.settings.copy_button_text }}
                  </button>
                </div>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    {% if block.settings.show_navigation %}
      <div class="ai-coupon-nav-{{ ai_gen_id }}">
        <button class="ai-coupon-nav-btn-{{ ai_gen_id }}" data-nav-prev aria-label="Previous">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>
        <button class="ai-coupon-nav-btn-{{ ai_gen_id }}" data-nav-next aria-label="Next">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
      </div>
    {% endif %}
  </div>
</coupon-slider-{{ ai_gen_id }}>

<script>
  (function() {
    class CouponSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.track = this.querySelector('[data-slider-track]');
        this.prevBtn = this.querySelector('[data-nav-prev]');
        this.nextBtn = this.querySelector('[data-nav-next]');
        this.copyButtons = this.querySelectorAll('.ai-coupon-copy-btn-{{ ai_gen_id }}');

        this.setupCopyButtons();
        this.setupNavigation();
      }

      setupCopyButtons() {
        this.copyButtons.forEach(button => {
          button.addEventListener('click', () => {
            const code = button.getAttribute('data-code');
            
            navigator.clipboard.writeText(code).then(() => {
              const originalText = button.textContent;
              button.textContent = '{{ block.settings.copied_button_text }}';
              button.classList.add('copied');

              setTimeout(() => {
                button.textContent = originalText;
                button.classList.remove('copied');
              }, 2000);
            }).catch(() => {
              const textarea = document.createElement('textarea');
              textarea.value = code;
              textarea.style.position = 'fixed';
              textarea.style.opacity = '0';
              document.body.appendChild(textarea);
              textarea.select();
              document.execCommand('copy');
              document.body.removeChild(textarea);

              const originalText = button.textContent;
              button.textContent = '{{ block.settings.copied_button_text }}';
              button.classList.add('copied');

              setTimeout(() => {
                button.textContent = originalText;
                button.classList.remove('copied');
              }, 2000);
            });
          });
        });
      }

      setupNavigation() {
        if (!this.prevBtn || !this.nextBtn) return;

        this.prevBtn.addEventListener('click', () => {
          this.track.scrollBy({
            left: -{{ block.settings.card_width | plus: block.settings.card_gap }},
            behavior: 'smooth'
          });
        });

        this.nextBtn.addEventListener('click', () => {
          this.track.scrollBy({
            left: {{ block.settings.card_width | plus: block.settings.card_gap }},
            behavior: 'smooth'
          });
        });

        this.track.addEventListener('scroll', () => {
          this.updateNavButtons();
        });

        this.updateNavButtons();
      }

      updateNavButtons() {
        if (!this.prevBtn || !this.nextBtn) return;

        const isAtStart = this.track.scrollLeft <= 0;
        const isAtEnd = this.track.scrollLeft + this.track.clientWidth >= this.track.scrollWidth - 1;

        this.prevBtn.disabled = isAtStart;
        this.nextBtn.disabled = isAtEnd;
      }
    }

    customElements.define('coupon-slider-{{ ai_gen_id }}', CouponSlider{{ ai_gen_id }});
  })();
</script>

