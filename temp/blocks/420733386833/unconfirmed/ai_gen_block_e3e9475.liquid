{% doc %}
  @prompt
    A magazine-style editorial layout
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-editorial-layout-{{ ai_gen_id }} {
    max-width: 100%;
    margin: 0 auto;
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-editorial-container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr;
    gap: {{ block.settings.content_spacing }}px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-editorial-hero-{{ ai_gen_id }} {
    position: relative;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
    min-height: 400px;
    display: flex;
    align-items: flex-end;
  }

  .ai-editorial-hero-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .ai-editorial-hero-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
  }

  .ai-editorial-hero-placeholder-{{ ai_gen_id }} svg {
    width: 100px;
    height: 100px;
    opacity: 0.3;
  }

  .ai-editorial-hero-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }}) 0%,
      transparent 60%
    );
    z-index: 2;
  }

  .ai-editorial-hero-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    padding: 40px;
    color: {{ block.settings.hero_text_color }};
    max-width: 600px;
  }

  .ai-editorial-hero-category-{{ ai_gen_id }} {
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 12px;
    color: {{ block.settings.category_color }};
  }

  .ai-editorial-hero-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.hero_title_size }}px;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 16px;
    font-family: {{ block.settings.title_font.family }}, {{ block.settings.title_font.fallback_families }};
  }

  .ai-editorial-hero-excerpt-{{ ai_gen_id }} {
    font-size: {{ block.settings.hero_text_size }}px;
    line-height: 1.5;
    margin: 0 0 24px;
    opacity: 0.9;
  }

  .ai-editorial-hero-meta-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 16px;
    font-size: 14px;
    opacity: 0.8;
  }

  .ai-editorial-hero-author-{{ ai_gen_id }} {
    font-weight: 500;
  }

  .ai-editorial-hero-date-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-editorial-hero-date-{{ ai_gen_id }}::before {
    content: 'â€¢';
    position: absolute;
    left: -10px;
  }

  .ai-editorial-secondary-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: {{ block.settings.content_spacing }}px;
  }

  .ai-editorial-article-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-editorial-article-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  }

  .ai-editorial-article-image-{{ ai_gen_id }} {
    position: relative;
    aspect-ratio: 16/10;
    overflow: hidden;
  }

  .ai-editorial-article-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-editorial-article-{{ ai_gen_id }}:hover .ai-editorial-article-image-{{ ai_gen_id }} img {
    transform: scale(1.05);
  }

  .ai-editorial-article-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-editorial-article-placeholder-{{ ai_gen_id }} svg {
    width: 60px;
    height: 60px;
    opacity: 0.3;
  }

  .ai-editorial-article-content-{{ ai_gen_id }} {
    padding: 24px;
  }

  .ai-editorial-article-category-{{ ai_gen_id }} {
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: {{ block.settings.category_color }};
    margin-bottom: 8px;
  }

  .ai-editorial-article-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.article_title_size }}px;
    font-weight: 600;
    line-height: 1.3;
    margin: 0 0 12px;
    color: {{ block.settings.text_color }};
    font-family: {{ block.settings.title_font.family }}, {{ block.settings.title_font.fallback_families }};
  }

  .ai-editorial-article-excerpt-{{ ai_gen_id }} {
    font-size: {{ block.settings.article_text_size }}px;
    line-height: 1.5;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
    margin: 0 0 16px;
  }

  .ai-editorial-article-meta-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 12px;
    color: {{ block.settings.text_color }};
    opacity: 0.6;
  }

  .ai-editorial-article-author-{{ ai_gen_id }} {
    font-weight: 500;
  }

  .ai-editorial-read-more-{{ ai_gen_id }} {
    color: {{ block.settings.category_color }};
    text-decoration: none;
    font-weight: 500;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: opacity 0.3s ease;
  }

  .ai-editorial-read-more-{{ ai_gen_id }}:hover {
    opacity: 0.7;
  }

  @media screen and (min-width: 768px) {
    .ai-editorial-container-{{ ai_gen_id }} {
      grid-template-columns: 2fr 1fr;
      gap: {{ block.settings.content_spacing | times: 1.5 }}px;
    }

    .ai-editorial-hero-content-{{ ai_gen_id }} {
      padding: 60px;
    }

    .ai-editorial-secondary-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }
  }

  @media screen and (max-width: 767px) {
    .ai-editorial-layout-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.6 }}px 16px;
    }

    .ai-editorial-hero-content-{{ ai_gen_id }} {
      padding: 24px;
    }

    .ai-editorial-hero-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.hero_title_size | times: 0.8 }}px;
    }

    .ai-editorial-secondary-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }
  }
{% endstyle %}

<div class="ai-editorial-layout-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-editorial-container-{{ ai_gen_id }}">
    <article class="ai-editorial-hero-{{ ai_gen_id }}">
      {% if block.settings.hero_image %}
        <img
          src="{{ block.settings.hero_image | image_url: width: 1200 }}"
          alt="{{ block.settings.hero_image.alt | escape }}"
          class="ai-editorial-hero-image-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.hero_image.width }}"
          height="{{ block.settings.hero_image.height }}"
        >
      {% else %}
        <div class="ai-editorial-hero-placeholder-{{ ai_gen_id }}">
          {{ 'hero-apparel-1' | placeholder_svg_tag }}
        </div>
      {% endif %}
      
      <div class="ai-editorial-hero-overlay-{{ ai_gen_id }}"></div>
      
      <div class="ai-editorial-hero-content-{{ ai_gen_id }}">
        {% if block.settings.hero_category != blank %}
          <div class="ai-editorial-hero-category-{{ ai_gen_id }}">
            {{ block.settings.hero_category }}
          </div>
        {% endif %}
        
        {% if block.settings.hero_title != blank %}
          <h1 class="ai-editorial-hero-title-{{ ai_gen_id }}">
            {{ block.settings.hero_title }}
          </h1>
        {% endif %}
        
        {% if block.settings.hero_excerpt != blank %}
          <div class="ai-editorial-hero-excerpt-{{ ai_gen_id }}">
            {{ block.settings.hero_excerpt }}
          </div>
        {% endif %}
        
        <div class="ai-editorial-hero-meta-{{ ai_gen_id }}">
          {% if block.settings.hero_author != blank %}
            <span class="ai-editorial-hero-author-{{ ai_gen_id }}">
              By {{ block.settings.hero_author }}
            </span>
          {% endif %}
          {% if block.settings.hero_date != blank %}
            <span class="ai-editorial-hero-date-{{ ai_gen_id }}">
              {{ block.settings.hero_date }}
            </span>
          {% endif %}
        </div>
      </div>
    </article>

    <aside class="ai-editorial-secondary-grid-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign article_image_key = 'article_' | append: i | append: '_image'
          assign article_category_key = 'article_' | append: i | append: '_category'
          assign article_title_key = 'article_' | append: i | append: '_title'
          assign article_excerpt_key = 'article_' | append: i | append: '_excerpt'
          assign article_author_key = 'article_' | append: i | append: '_author'
          assign article_date_key = 'article_' | append: i | append: '_date'
          assign article_link_key = 'article_' | append: i | append: '_link'

          assign article_image = block.settings[article_image_key]
          assign article_category = block.settings[article_category_key]
          assign article_title = block.settings[article_title_key]
          assign article_excerpt = block.settings[article_excerpt_key]
          assign article_author = block.settings[article_author_key]
          assign article_date = block.settings[article_date_key]
          assign article_link = block.settings[article_link_key]
        %}

        {% if article_title != blank or article_image %}
          <article class="ai-editorial-article-{{ ai_gen_id }}">
            <div class="ai-editorial-article-image-{{ ai_gen_id }}">
              {% if article_image %}
                <img
                  src="{{ article_image | image_url: width: 600 }}"
                  alt="{{ article_image.alt | escape }}"
                  loading="lazy"
                  width="{{ article_image.width }}"
                  height="{{ article_image.height }}"
                >
              {% else %}
                <div class="ai-editorial-article-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
            
            <div class="ai-editorial-article-content-{{ ai_gen_id }}">
              {% if article_category != blank %}
                <div class="ai-editorial-article-category-{{ ai_gen_id }}">
                  {{ article_category }}
                </div>
              {% endif %}
              
              {% if article_title != blank %}
                <h3 class="ai-editorial-article-title-{{ ai_gen_id }}">
                  {{ article_title }}
                </h3>
              {% endif %}
              
              {% if article_excerpt != blank %}
                <div class="ai-editorial-article-excerpt-{{ ai_gen_id }}">
                  {{ article_excerpt }}
                </div>
              {% endif %}
              
              <div class="ai-editorial-article-meta-{{ ai_gen_id }}">
                <div>
                  {% if article_author != blank %}
                    <span class="ai-editorial-article-author-{{ ai_gen_id }}">
                      {{ article_author }}
                    </span>
                  {% endif %}
                  {% if article_date != blank %}
                    <span> â€¢ {{ article_date }}</span>
                  {% endif %}
                </div>
                {% if article_link != blank %}
                  <a href="{{ article_link }}" class="ai-editorial-read-more-{{ ai_gen_id }}">
                    Read More
                  </a>
                {% endif %}
              </div>
            </div>
          </article>
        {% endif %}
      {% endfor %}
    </aside>
  </div>
</div>

