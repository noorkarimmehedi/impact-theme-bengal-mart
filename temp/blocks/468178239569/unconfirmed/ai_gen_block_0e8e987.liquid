  }

  .ai-offers-slider__container-{{ ai_gen_id }} {
    position: relative;
    padding: 0 20px;
  }

  .ai-offers-slider__track-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.card_gap }}px;
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding: 10px 0 20px 0;
  }

  .ai-offers-slider__track-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none;
  }

  .ai-offers-slider__card-{{ ai_gen_id }} {
    flex: 0 0 auto;
    width: {{ block.settings.card_width }}px;
    padding: {{ block.settings.card_padding }}px;
    background: {{ block.settings.card_background }};
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
