    position: relative;
    overflow: hidden;
  }

  .ai-offers-slider__card-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: {{ block.settings.gradient_height }}px;
    background: linear-gradient(135deg, {{ block.settings.gradient_start }} 0%, {{ block.settings.gradient_end }} 100%);
