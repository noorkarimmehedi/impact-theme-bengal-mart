<script>
  (function() {
    class OffersSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.track = this.querySelector('[data-slider-track]');
        this.prevBtn = this.querySelector('[data-nav-prev]');
        this.nextBtn = this.querySelector('[data-nav-next]');
        this.copyButtons = this.querySelectorAll('.ai-offers-slider__copy-btn-{{ ai_gen_id }}');

        this.setupCopyButtons();
        this.setupNavigation();
        this.updateNavigationState();
      }

      setupCopyButtons() {
        this.copyButtons.forEach(button => {
          button.addEventListener('click', () => {
            const code = button.getAttribute('data-code');
            navigator.clipboard.writeText(code).then(() => {
              const originalText = button.textContent;
              button.textContent = 'Copied!';
              button.classList.add('copied');
              
              setTimeout(() => {
                button.textContent = originalText;
                button.classList.remove('copied');
              }, 2000);
            });
          });
        });
      }

      setupNavigation() {
        if (!this.prevBtn || !this.nextBtn) return;

        this.prevBtn.addEventListener('click', () => {
          const scrollAmount = this.track.offsetWidth * 0.8;
          this.track.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
          setTimeout(() => this.updateNavigationState(), 300);
        });

        this.nextBtn.addEventListener('click', () => {
          const scrollAmount = this.track.offsetWidth * 0.8;
          this.track.scrollBy({ left: scrollAmount, behavior: 'smooth' });
          setTimeout(() => this.updateNavigationState(), 300);
        });

        this.track.addEventListener('scroll', () => {
          this.updateNavigationState();
        });
      }

      updateNavigationState() {
        if (!this.prevBtn || !this.nextBtn) return;

        const isAtStart = this.track.scrollLeft <= 0;
        const isAtEnd = this.track.scrollLeft + this.track.offsetWidth >= this.track.scrollWidth - 1;

        this.prevBtn.disabled = isAtStart;
        this.nextBtn.disabled = isAtEnd;
      }
    }

    customElements.define('offers-slider-{{ ai_gen_id }}', OffersSlider{{ ai_gen_id }});
  })();
</script>

