    generate me a slideshow where the texts and button should be customizable and should be on the bottom on mobile version and on left alligned bottom on desktop version
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-slideshow-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    height: {{ block.settings.slideshow_height_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .ai-slideshow-{{ ai_gen_id }} {
      height: {{ block.settings.slideshow_height_desktop }}px;
    }
  }

  .ai-slideshow-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .ai-slideshow-slide-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 0.6s ease-in-out;
    pointer-events: none;
  }

  .ai-slideshow-slide-{{ ai_gen_id }}.active {
    opacity: 1;
    pointer-events: auto;
  }

  .ai-slideshow-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-slideshow-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-slideshow-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-slideshow-content-{{ ai_gen_id }} {
    position: absolute;
    bottom: {{ block.settings.content_padding_mobile }}px;
    left: 0;
    right: 0;
    padding: 0 {{ block.settings.content_padding_mobile }}px;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 16px;
  }

  @media screen and (min-width: 750px) {
    .ai-slideshow-content-{{ ai_gen_id }} {
      bottom: {{ block.settings.content_padding_desktop }}px;
      left: {{ block.settings.content_padding_desktop }}px;
      right: auto;
      max-width: {{ block.settings.content_max_width }}px;
      align-items: flex-start;
      text-align: left;
      padding: 0;
    }
  }

  .ai-slideshow-heading-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.heading_size_mobile }}px;
    line-height: 1.2;
    color: {{ block.settings.text_color }};
  }

  @media screen and (min-width: 750px) {
    .ai-slideshow-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size_desktop }}px;
    }
  }

  .ai-slideshow-subheading-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.subheading_size_mobile }}px;
    line-height: 1.4;
    color: {{ block.settings.text_color }};
  }

  @media screen and (min-width: 750px) {
    .ai-slideshow-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size_desktop }}px;
    }
  }

  .ai-slideshow-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    transition: background-color 0.3s ease;
  }

  .ai-slideshow-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  .ai-slideshow-controls-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    transform: translateY(-50%);
    display: flex;
    justify-content: space-between;
    padding: 0 {{ block.settings.content_padding_mobile }}px;
    pointer-events: none;
  }

  @media screen and (min-width: 750px) {
    .ai-slideshow-controls-{{ ai_gen_id }} {
      padding: 0 {{ block.settings.content_padding_desktop }}px;
    }
  }

  .ai-slideshow-arrow-{{ ai_gen_id }} {
    width: 40px;
    height: 40px;
    background-color: {{ block.settings.arrow_background }};
    color: {{ block.settings.arrow_color }};
    border: none;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    pointer-events: auto;
    transition: background-color 0.3s ease;
  }

  .ai-slideshow-arrow-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.arrow_hover_background }};
  }

  .ai-slideshow-arrow-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;
  }

  .ai-slideshow-dots-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 8px;
  }

  .ai-slideshow-dot-{{ ai_gen_id }} {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    opacity: 0.5;
    border: none;
    cursor: pointer;
    padding: 0;
    transition: opacity 0.3s ease;
  }

  .ai-slideshow-dot-{{ ai_gen_id }}.active {
    opacity: 1;
  }
{% endstyle %}

<slideshow-{{ ai_gen_id }} class="ai-slideshow-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-slideshow-container-{{ ai_gen_id }}">
    {% for i in (1..5) %}
      {% liquid
        assign slide_enabled_key = 'slide_' | append: i | append: '_enabled'
        assign slide_image_key = 'slide_' | append: i | append: '_image'
        assign slide_heading_key = 'slide_' | append: i | append: '_heading'
        assign slide_subheading_key = 'slide_' | append: i | append: '_subheading'
        assign slide_button_text_key = 'slide_' | append: i | append: '_button_text'
        assign slide_button_link_key = 'slide_' | append: i | append: '_button_link'

        assign slide_enabled = block.settings[slide_enabled_key]
        assign slide_image = block.settings[slide_image_key]
        assign slide_heading = block.settings[slide_heading_key]
        assign slide_subheading = block.settings[slide_subheading_key]
        assign slide_button_text = block.settings[slide_button_text_key]
        assign slide_button_link = block.settings[slide_button_link_key]
      %}

      {% if slide_enabled %}
        <div class="ai-slideshow-slide-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}" data-slide="{{ i }}">
          {% if slide_image %}
            <img
              src="{{ slide_image | image_url: width: 2000 }}"
              alt="{{ slide_image.alt | escape }}"
              loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
              width="{{ slide_image.width }}"
              height="{{ slide_image.height }}"
              class="ai-slideshow-image-{{ ai_gen_id }}"
            >
          {% else %}
            <div class="ai-slideshow-image-placeholder-{{ ai_gen_id }}">
              {{ 'hero-apparel-1' | placeholder_svg_tag }}
            </div>
          {% endif %}

          <div class="ai-slideshow-content-{{ ai_gen_id }}">
            {% if slide_heading != blank %}
              <h2 class="ai-slideshow-heading-{{ ai_gen_id }}">{{ slide_heading }}</h2>
            {% endif %}

            {% if slide_subheading != blank %}
              <p class="ai-slideshow-subheading-{{ ai_gen_id }}">{{ slide_subheading }}</p>
            {% endif %}

            {% if slide_button_text != blank %}
              <a
                href="{{ slide_button_link }}"
                class="ai-slideshow-button-{{ ai_gen_id }}"
              >
                {{ slide_button_text }}
              </a>
            {% endif %}
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  {% if block.settings.show_arrows %}
    <div class="ai-slideshow-controls-{{ ai_gen_id }}">
      <button class="ai-slideshow-arrow-{{ ai_gen_id }} ai-slideshow-prev-{{ ai_gen_id }}" aria-label="Previous slide">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
      </button>
      <button class="ai-slideshow-arrow-{{ ai_gen_id }} ai-slideshow-next-{{ ai_gen_id }}" aria-label="Next slide">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </button>
    </div>
  {% endif %}

  {% if block.settings.show_dots %}
    <div class="ai-slideshow-dots-{{ ai_gen_id }}">
      {% for i in (1..5) %}
        {% liquid
          assign slide_enabled_key = 'slide_' | append: i | append: '_enabled'
          assign slide_enabled = block.settings[slide_enabled_key]
        %}
        {% if slide_enabled %}
          <button
            class="ai-slideshow-dot-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
            data-slide="{{ i }}"
            aria-label="Go to slide {{ i }}"
          ></button>
        {% endif %}
      {% endfor %}
    </div>
  {% endif %}
</slideshow-{{ ai_gen_id }}>

<script>
  (function() {
    class Slideshow{{ai_gen_id}} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.slides = [];
        this.autoplayInterval = null;
      }

      connectedCallback() {
        this.slides = Array.from(this.querySelectorAll('.ai-slideshow-slide-{{ ai_gen_id }}'));
        this.dots = Array.from(this.querySelectorAll('.ai-slideshow-dot-{{ ai_gen_id }}'));
        this.prevButton = this.querySelector('.ai-slideshow-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-slideshow-next-{{ ai_gen_id }}');

        this.setupEventListeners();
        this.startAutoplay();
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => {
            this.goToPrevSlide();
            this.resetAutoplay();
          });
        }

        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => {
            this.goToNextSlide();
            this.resetAutoplay();
          });
        }

        this.dots.forEach((dot, index) => {
          dot.addEventListener('click', () => {
            this.goToSlide(index);
            this.resetAutoplay();
          });
        });
      }

      goToSlide(index) {
        this.slides[this.currentSlide].classList.remove('active');
        if (this.dots[this.currentSlide]) {
          this.dots[this.currentSlide].classList.remove('active');
        }

        this.currentSlide = index;

        this.slides[this.currentSlide].classList.add('active');
        if (this.dots[this.currentSlide]) {
          this.dots[this.currentSlide].classList.add('active');
        }
      }

      goToNextSlide() {
        const nextIndex = (this.currentSlide + 1) % this.slides.length;
        this.goToSlide(nextIndex);
      }

      goToPrevSlide() {
        const prevIndex = (this.currentSlide - 1 + this.slides.length) % this.slides.length;
        this.goToSlide(prevIndex);
      }

      startAutoplay() {
        const autoplayEnabled = {{ block.settings.autoplay }};
        const autoplaySpeed = {{ block.settings.autoplay_speed }} * 1000;

        if (autoplayEnabled && this.slides.length > 1) {
          this.autoplayInterval = setInterval(() => {
            this.goToNextSlide();
          }, autoplaySpeed);
        }
      }

      stopAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }

      resetAutoplay() {
        this.stopAutoplay();
        this.startAutoplay();
      }
    }

    customElements.define('slideshow-{{ ai_gen_id }}', Slideshow{{ai_gen_id}});
  })();
</script>

