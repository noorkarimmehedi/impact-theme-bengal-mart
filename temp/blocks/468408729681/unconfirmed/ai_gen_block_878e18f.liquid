{% doc %}
  @prompt
    A magazine-style editorial layout
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-magazine-layout-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-magazine-container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
  }

  .ai-magazine-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-magazine-featured-{{ ai_gen_id }} {
    grid-column: span 8;
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
    min-height: 600px;
  }

  .ai-magazine-featured-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: absolute;
    top: 0;
    left: 0;
  }

  .ai-magazine-featured-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    position: absolute;
    top: 0;
    left: 0;
  }

  .ai-magazine-featured-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-magazine-featured-content-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 40px;
    background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0) 100%);
    color: {{ block.settings.featured_text_color }};
  }

  .ai-magazine-category-{{ ai_gen_id }} {
    display: inline-block;
    padding: 6px 16px;
    background-color: {{ block.settings.category_bg_color }};
    color: {{ block.settings.category_text_color }};
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 16px;
    border-radius: 2px;
  }

  .ai-magazine-featured-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.featured_title_size }}px;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 12px 0;
  }

  .ai-magazine-featured-excerpt-{{ ai_gen_id }} {
    font-size: 16px;
    line-height: 1.6;
    margin: 0 0 16px 0;
    opacity: 0.9;
  }

  .ai-magazine-featured-meta-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 16px;
    font-size: 14px;
    opacity: 0.8;
  }

  .ai-magazine-sidebar-{{ ai_gen_id }} {
    grid-column: span 4;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-magazine-card-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
    min-height: 290px;
  }

  .ai-magazine-card-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: absolute;
    top: 0;
    left: 0;
  }

  .ai-magazine-card-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    position: absolute;
    top: 0;
    left: 0;
  }

  .ai-magazine-card-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-magazine-card-content-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 24px;
    background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0) 100%);
    color: {{ block.settings.featured_text_color }};
  }

  .ai-magazine-card-title-{{ ai_gen_id }} {
    font-size: 20px;
    font-weight: 700;
    line-height: 1.3;
    margin: 0;
  }

  .ai-magazine-secondary-grid-{{ ai_gen_id }} {
    grid-column: span 12;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin-top: {{ block.settings.grid_gap }}px;
  }

  .ai-magazine-horizontal-card-{{ ai_gen_id }} {
    display: flex;
    gap: 20px;
    background-color: {{ block.settings.card_bg_color }};
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    padding: 20px;
  }

  .ai-magazine-horizontal-image-{{ ai_gen_id }} {
    width: 140px;
    height: 140px;
    flex-shrink: 0;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    position: relative;
  }

  .ai-magazine-horizontal-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-magazine-horizontal-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
  }

  .ai-magazine-horizontal-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-magazine-horizontal-content-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .ai-magazine-horizontal-title-{{ ai_gen_id }} {
    font-size: 18px;
    font-weight: 700;
    line-height: 1.4;
    margin: 0 0 8px 0;
    color: {{ block.settings.text_color }};
  }

  .ai-magazine-horizontal-excerpt-{{ ai_gen_id }} {
    font-size: 14px;
    line-height: 1.6;
    margin: 0 0 12px 0;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
  }

  .ai-magazine-horizontal-meta-{{ ai_gen_id }} {
    font-size: 12px;
    color: {{ block.settings.text_color }};
    opacity: 0.6;
  }

  .ai-magazine-link-{{ ai_gen_id }} {
    text-decoration: none;
    color: inherit;
    display: block;
    height: 100%;
  }

  @media screen and (max-width: 1024px) {
    .ai-magazine-featured-{{ ai_gen_id }} {
      grid-column: span 12;
      min-height: 500px;
    }

    .ai-magazine-sidebar-{{ ai_gen_id }} {
      grid-column: span 12;
      flex-direction: row;
    }

    .ai-magazine-card-{{ ai_gen_id }} {
      flex: 1;
    }

    .ai-magazine-secondary-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-magazine-layout-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.6 }}px 16px;
    }

    .ai-magazine-featured-{{ ai_gen_id }} {
      min-height: 400px;
    }

    .ai-magazine-featured-content-{{ ai_gen_id }} {
      padding: 24px;
    }

    .ai-magazine-featured-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.featured_title_size | times: 0.6 }}px;
    }

    .ai-magazine-sidebar-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-magazine-secondary-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-magazine-horizontal-card-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-magazine-horizontal-image-{{ ai_gen_id }} {
      width: 100%;
      height: 200px;
    }
  }
{% endstyle %}

<div class="ai-magazine-layout-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-magazine-container-{{ ai_gen_id }}">
    <div class="ai-magazine-grid-{{ ai_gen_id }}">
      <div class="ai-magazine-featured-{{ ai_gen_id }}">
        {% if block.settings.featured_article %}
          <a href="{{ block.settings.featured_article.url }}" class="ai-magazine-link-{{ ai_gen_id }}">
            {% if block.settings.featured_article.image %}
              <img
                src="{{ block.settings.featured_article.image | image_url: width: 1200 }}"
                alt="{{ block.settings.featured_article.image.alt | escape }}"
                class="ai-magazine-featured-image-{{ ai_gen_id }}"
                loading="lazy"
                width="1200"
                height="800"
              >
            {% else %}
              <div class="ai-magazine-featured-placeholder-{{ ai_gen_id }}">
                {{ 'hero-apparel-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
            <div class="ai-magazine-featured-content-{{ ai_gen_id }}">
              {% if block.settings.show_category and block.settings.featured_article.tags.size > 0 %}
                <span class="ai-magazine-category-{{ ai_gen_id }}">{{ block.settings.featured_article.tags.first }}</span>
              {% endif %}
              <h2 class="ai-magazine-featured-title-{{ ai_gen_id }}">{{ block.settings.featured_article.title }}</h2>
              {% if block.settings.show_excerpt and block.settings.featured_article.excerpt != blank %}
                <p class="ai-magazine-featured-excerpt-{{ ai_gen_id }}">{{ block.settings.featured_article.excerpt | strip_html | truncate: 150 }}</p>
              {% endif %}
              {% if block.settings.show_date %}
                <div class="ai-magazine-featured-meta-{{ ai_gen_id }}">
                  <span>{{ block.settings.featured_article.published_at | date: '%B %d, %Y' }}</span>
                  {% if block.settings.show_author and block.settings.featured_article.author != blank %}
                    <span>â€¢</span>
                    <span>{{ block.settings.featured_article.author }}</span>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          </a>
        {% else %}
          <div class="ai-magazine-featured-placeholder-{{ ai_gen_id }}">
            {{ 'hero-apparel-1' | placeholder_svg_tag }}
          </div>
          <div class="ai-magazine-featured-content-{{ ai_gen_id }}">
            <span class="ai-magazine-category-{{ ai_gen_id }}">Featured</span>
            <h2 class="ai-magazine-featured-title-{{ ai_gen_id }}">Select a featured article</h2>
            <p class="ai-magazine-featured-excerpt-{{ ai_gen_id }}">Choose an article to showcase in this prominent position</p>
          </div>
        {% endif %}
      </div>

      <div class="ai-magazine-sidebar-{{ ai_gen_id }}">
        {% if block.settings.sidebar_article_1 %}
          <div class="ai-magazine-card-{{ ai_gen_id }}">
            <a href="{{ block.settings.sidebar_article_1.url }}" class="ai-magazine-link-{{ ai_gen_id }}">
              {% if block.settings.sidebar_article_1.image %}
                <img
                  src="{{ block.settings.sidebar_article_1.image | image_url: width: 600 }}"
                  alt="{{ block.settings.sidebar_article_1.image.alt | escape }}"
                  class="ai-magazine-card-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="600"
                  height="400"
                >
              {% else %}
                <div class="ai-magazine-card-placeholder-{{ ai_gen_id }}">
                  {{ 'collection-apparel-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
              <div class="ai-magazine-card-content-{{ ai_gen_id }}">
                {% if block.settings.show_category and block.settings.sidebar_article_1.tags.size > 0 %}
                  <span class="ai-magazine-category-{{ ai_gen_id }}">{{ block.settings.sidebar_article_1.tags.first }}</span>
                {% endif %}
                <h3 class="ai-magazine-card-title-{{ ai_gen_id }}">{{ block.settings.sidebar_article_1.title }}</h3>
              </div>
            </a>
          </div>
        {% else %}
          <div class="ai-magazine-card-{{ ai_gen_id }}">
            <div class="ai-magazine-card-placeholder-{{ ai_gen_id }}">
              {{ 'collection-apparel-1' | placeholder_svg_tag }}
            </div>
            <div class="ai-magazine-card-content-{{ ai_gen_id }}">
              <h3 class="ai-magazine-card-title-{{ ai_gen_id }}">Select sidebar article 1</h3>
            </div>
          </div>
        {% endif %}

        {% if block.settings.sidebar_article_2 %}
          <div class="ai-magazine-card-{{ ai_gen_id }}">
            <a href="{{ block.settings.sidebar_article_2.url }}" class="ai-magazine-link-{{ ai_gen_id }}">
              {% if block.settings.sidebar_article_2.image %}
                <img
                  src="{{ block.settings.sidebar_article_2.image | image_url: width: 600 }}"
                  alt="{{ block.settings.sidebar_article_2.image.alt | escape }}"
                  class="ai-magazine-card-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="600"
                  height="400"
                >
              {% else %}
                <div class="ai-magazine-card-placeholder-{{ ai_gen_id }}">
                  {{ 'collection-apparel-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
              <div class="ai-magazine-card-content-{{ ai_gen_id }}">
                {% if block.settings.show_category and block.settings.sidebar_article_2.tags.size > 0 %}
                  <span class="ai-magazine-category-{{ ai_gen_id }}">{{ block.settings.sidebar_article_2.tags.first }}</span>
                {% endif %}
                <h3 class="ai-magazine-card-title-{{ ai_gen_id }}">{{ block.settings.sidebar_article_2.title }}</h3>
              </div>
            </a>
          </div>
        {% else %}
          <div class="ai-magazine-card-{{ ai_gen_id }}">
            <div class="ai-magazine-card-placeholder-{{ ai_gen_id }}">
              {{ 'collection-apparel-1' | placeholder_svg_tag }}
            </div>
            <div class="ai-magazine-card-content-{{ ai_gen_id }}">
              <h3 class="ai-magazine-card-title-{{ ai_gen_id }}">Select sidebar article 2</h3>
            </div>
          </div>
        {% endif %}
      </div>

      <div class="ai-magazine-secondary-grid-{{ ai_gen_id }}">
        {% for i in (1..3) %}
          {% assign article_key = 'secondary_article_' | append: i %}
          {% assign article = block.settings[article_key] %}
          
          {% if article %}
            <div class="ai-magazine-horizontal-card-{{ ai_gen_id }}">
              <a href="{{ article.url }}" class="ai-magazine-link-{{ ai_gen_id }}" style="display: flex; gap: 20px; width: 100%;">
                <div class="ai-magazine-horizontal-image-{{ ai_gen_id }}">
                  {% if article.image %}
                    <img
                      src="{{ article.image | image_url: width: 300 }}"
                      alt="{{ article.image.alt | escape }}"
                      loading="lazy"
                      width="300"
                      height="300"
                    >
                  {% else %}
                    <div class="ai-magazine-horizontal-placeholder-{{ ai_gen_id }}">
                      {{ 'product-apparel-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                </div>
                <div class="ai-magazine-horizontal-content-{{ ai_gen_id }}">
                  {% if block.settings.show_category and article.tags.size > 0 %}
                    <span class="ai-magazine-category-{{ ai_gen_id }}" style="margin-bottom: 8px;">{{ article.tags.first }}</span>
                  {% endif %}
                  <h4 class="ai-magazine-horizontal-title-{{ ai_gen_id }}">{{ article.title }}</h4>
                  {% if block.settings.show_excerpt and article.excerpt != blank %}
                    <p class="ai-magazine-horizontal-excerpt-{{ ai_gen_id }}">{{ article.excerpt | strip_html | truncate: 80 }}</p>
                  {% endif %}
                  {% if block.settings.show_date %}
                    <div class="ai-magazine-horizontal-meta-{{ ai_gen_id }}">
                      {{ article.published_at | date: '%B %d, %Y' }}
                    </div>
                  {% endif %}
                </div>
              </a>
            </div>
          {% else %}
            <div class="ai-magazine-horizontal-card-{{ ai_gen_id }}">
              <div class="ai-magazine-horizontal-image-{{ ai_gen_id }}">
                <div class="ai-magazine-horizontal-placeholder-{{ ai_gen_id }}">
                  {{ 'product-apparel-1' | placeholder_svg_tag }}
                </div>
              </div>
              <div class="ai-magazine-horizontal-content-{{ ai_gen_id }}">
                <h4 class="ai-magazine-horizontal-title-{{ ai_gen_id }}">Select article {{ i }}</h4>
                <p class="ai-magazine-horizontal-excerpt-{{ ai_gen_id }}">Choose an article to display here</p>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
