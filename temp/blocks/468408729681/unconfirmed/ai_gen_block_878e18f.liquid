  "name": "Magazine editorial layout",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Featured article"
    },
    {
      "type": "article",
      "id": "featured_article",
      "label": "Featured article"
    },
    {
      "type": "range",
      "id": "featured_title_size",
      "min": 24,
      "max": 72,
      "step": 2,
      "unit": "px",
      "label": "Title size",
      "default": 48
    },
    {
      "type": "header",
      "content": "Sidebar articles"
    },
    {
      "type": "article",
      "id": "sidebar_article_1",
      "label": "Sidebar article 1"
    },
    {
      "type": "article",
      "id": "sidebar_article_2",
      "label": "Sidebar article 2"
    },
    {
      "type": "header",
      "content": "Secondary articles"
    },
    {
      "type": "article",
      "id": "secondary_article_1",
      "label": "Article 1"
    },
    {
      "type": "article",
