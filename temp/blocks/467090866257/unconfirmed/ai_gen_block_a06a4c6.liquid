{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-offers-promo-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 20px;
    background: {{ block.settings.background_color }};
  }

  .ai-offers-promo__container-{{ ai_gen_id }} {
    max-width: 1000px;
    margin: 0 auto;
  }

  .ai-offers-promo__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 30px;
  }

  .ai-offers-promo__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 8px;
    font-weight: 700;
  }

  .ai-offers-promo__subtitle-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
  }

  .ai-offers-promo__grid-{{ ai_gen_id }} {
    display: grid;
    gap: 16px;
    grid-template-columns: 1fr;
  }

  .ai-offers-promo__card-{{ ai_gen_id }} {
    background: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: 20px;
    position: relative;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .ai-offers-promo__card-{{ ai_gen_id }}:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
  }

  .ai-offers-promo__card-inner-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .ai-offers-promo__icon-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    background: {{ block.settings.icon_background }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ block.settings.icon_color }};
  }

  .ai-offers-promo__icon-{{ ai_gen_id }} svg {
    width: 24px;
    height: 24px;
  }

  .ai-offers-promo__content-{{ ai_gen_id }} {
    flex: 1;
    min-width: 0;
  }

  .ai-offers-promo__text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 10px;
    font-weight: 500;
    line-height: 1.4;
  }

  .ai-offers-promo__code-box-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: {{ block.settings.code_background }};
    border: 2px dashed {{ block.settings.code_border_color }};
    border-radius: {{ block.settings.code_border_radius }}px;
    padding: 8px 12px;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .ai-offers-promo__code-box-{{ ai_gen_id }}:hover {
    background: {{ block.settings.code_hover_background }};
    border-color: {{ block.settings.button_background }};
  }

  .ai-offers-promo__code-{{ ai_gen_id }} {
    font-size: {{ block.settings.code_size }}px;
    color: {{ block.settings.code_text_color }};
    font-weight: 700;
    letter-spacing: 0.5px;
    font-family: monospace;
  }

  .ai-offers-promo__copy-icon-{{ ai_gen_id }} {
    width: 16px;
    height: 16px;
    color: {{ block.settings.button_background }};
    transition: transform 0.2s ease;
  }

  .ai-offers-promo__code-box-{{ ai_gen_id }}:hover .ai-offers-promo__copy-icon-{{ ai_gen_id }} {
    transform: scale(1.1);
  }

  .ai-offers-promo__code-box-{{ ai_gen_id }}.copied {
    background: {{ block.settings.success_color }};
    border-color: {{ block.settings.success_color }};
  }

  .ai-offers-promo__code-box-{{ ai_gen_id }}.copied .ai-offers-promo__code-{{ ai_gen_id }} {
    color: #ffffff;
  }

  .ai-offers-promo__code-box-{{ ai_gen_id }}.copied .ai-offers-promo__copy-icon-{{ ai_gen_id }} {
    color: #ffffff;
  }

  .ai-offers-promo__tooltip-{{ ai_gen_id }} {
    position: absolute;
    bottom: calc(100% + 8px);
    left: 50%;
    transform: translateX(-50%);
    background: #333;
    color: #fff;
    padding: 6px 12px;
    border-radius: 6px;
    font-size: 12px;
    white-space: nowrap;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.2s ease;
  }

  .ai-offers-promo__code-box-{{ ai_gen_id }}:hover .ai-offers-promo__tooltip-{{ ai_gen_id }} {
    opacity: 1;
  }

  .ai-offers-promo__code-box-{{ ai_gen_id }}.copied .ai-offers-promo__tooltip-{{ ai_gen_id }} {
    opacity: 0;
  }

  @media screen and (min-width: 750px) {
    .ai-offers-promo__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(auto-fit, minmax(450px, 1fr));
    }
  }
{% endstyle %}

<promo-offers-{{ ai_gen_id }} class="ai-offers-promo-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-offers-promo__container-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.subtitle != blank %}
      <div class="ai-offers-promo__header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-offers-promo__title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <p class="ai-offers-promo__subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-offers-promo__grid-{{ ai_gen_id }}">
      {% for i in (1..5) %}
        {% liquid
          assign offer_text_key = 'offer_' | append: i | append: '_text'
          assign offer_code_key = 'offer_' | append: i | append: '_code'
          assign offer_enabled_key = 'offer_' | append: i | append: '_enabled'

          assign offer_text = block.settings[offer_text_key]
          assign offer_code = block.settings[offer_code_key]
          assign offer_enabled = block.settings[offer_enabled_key]
        %}

        {% if offer_enabled and offer_text != blank and offer_code != blank %}
          <div class="ai-offers-promo__card-{{ ai_gen_id }}">
            <div class="ai-offers-promo__card-inner-{{ ai_gen_id }}">
              <div class="ai-offers-promo__icon-{{ ai_gen_id }}">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"></path>
                  <line x1="7" y1="7" x2="7.01" y2="7"></line>
                </svg>
              </div>

              <div class="ai-offers-promo__content-{{ ai_gen_id }}">
                <p class="ai-offers-promo__text-{{ ai_gen_id }}">{{ offer_text }}</p>
                
                <div 
                  class="ai-offers-promo__code-box-{{ ai_gen_id }}"
                  data-code="{{ offer_code }}"
                  role="button"
                  tabindex="0"
                  aria-label="Click to copy code {{ offer_code }}"
                >
                  <span class="ai-offers-promo__code-{{ ai_gen_id }}">{{ offer_code }}</span>
                  <svg class="ai-offers-promo__copy-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
                    <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
                  </svg>
                  <span class="ai-offers-promo__tooltip-{{ ai_gen_id }}">Click to copy</span>
                </div>
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</promo-offers-{{ ai_gen_id }}>

<script>
  (function() {
    class PromoOffers{{ ai_gen_id }} extends HTMLElement {
      connectedCallback() {
        this.codeBoxes = this.querySelectorAll('.ai-offers-promo__code-box-{{ ai_gen_id }}');
        this.setupCopyFunctionality();
      }

      setupCopyFunctionality() {
        this.codeBoxes.forEach(box => {
          box.addEventListener('click', () => this.handleCopy(box));
          box.addEventListener('keydown', (e) => {
            if (e.key === 'Enter' || e.key === ' ') {
              e.preventDefault();
              this.handleCopy(box);
            }
          });
        });
      }

      handleCopy(box) {
        const code = box.getAttribute('data-code');
        this.copyToClipboard(code, box);
      }

      copyToClipboard(text, box) {
        if (navigator.clipboard && navigator.clipboard.writeText) {
          navigator.clipboard.writeText(text).then(() => {
            this.showCopiedState(box);
          }).catch(() => {
            this.fallbackCopy(text, box);
          });
        } else {
          this.fallbackCopy(text, box);
        }
      }

      fallbackCopy(text, box) {
        const textArea = document.createElement('textarea');
        textArea.value = text;
        textArea.style.position = 'fixed';
        textArea.style.left = '-999999px';
        document.body.appendChild(textArea);
        textArea.select();
        
        try {
          document.execCommand('copy');
          this.showCopiedState(box);
        } catch (err) {
          console.error('Failed to copy:', err);
        }
        
        document.body.removeChild(textArea);
      }

      showCopiedState(box) {
        const codeElement = box.querySelector('.ai-offers-promo__code-{{ ai_gen_id }}');
        const iconElement = box.querySelector('.ai-offers-promo__copy-icon-{{ ai_gen_id }}');
        const originalCode = codeElement.textContent;
        
        box.classList.add('copied');
        codeElement.textContent = 'COPIED!';
        iconElement.innerHTML = '<polyline points="20 6 9 17 4 12"></polyline>';
        
        setTimeout(() => {
          box.classList.remove('copied');
          codeElement.textContent = originalCode;
          iconElement.innerHTML = '<rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>';
        }, 2000);
      }
    }

    customElements.define('promo-offers-{{ ai_gen_id }}', PromoOffers{{ ai_gen_id }});
  })();
</script>

