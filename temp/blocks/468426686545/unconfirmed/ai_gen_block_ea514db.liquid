<script>
  (function() {
    class ShippingTimeline{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.countdownElement = this.querySelector('[data-countdown]');
        this.step1DateElement = this.querySelector('[data-step1-date]');
        this.step2DateElement = this.querySelector('[data-step2-date]');
        this.step3DateElement = this.querySelector('[data-step3-date]');
        this.cutoffHour = {{ block.settings.cutoff_hour }};
        this.cutoffMinute = {{ block.settings.cutoff_minute }};
        this.step1DaysOffset = parseInt(this.dataset.step1Days);
        this.step2StartDays = parseInt(this.dataset.step2Start);
        this.step2EndDays = parseInt(this.dataset.step2End);
        this.step3StartDays = parseInt(this.dataset.step3Start);
        this.step3EndDays = parseInt(this.dataset.step3End);
        this.monthNames = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
      }

      connectedCallback() {
        this.updateDates();
        this.updateCountdown();
        this.interval = setInterval(() => this.updateCountdown(), 1000);
      }

      disconnectedCallback() {
        if (this.interval) {
          clearInterval(this.interval);
        }
      }

      formatDate(date) {
        return this.monthNames[date.getMonth()] + ' ' + date.getDate();
      }

      updateDates() {
        const today = new Date();
        
        const step1Date = new Date(today);
        step1Date.setDate(step1Date.getDate() + this.step1DaysOffset);
        this.step1DateElement.textContent = this.formatDate(step1Date);

        const step2StartDate = new Date(today);
        step2StartDate.setDate(step2StartDate.getDate() + this.step2StartDays);
        const step2EndDate = new Date(today);
        step2EndDate.setDate(step2EndDate.getDate() + this.step2EndDays);
        this.step2DateElement.textContent = this.formatDate(step2StartDate) + ' ‚Äì ' + this.formatDate(step2EndDate);

        const step3StartDate = new Date(today);
        step3StartDate.setDate(step3StartDate.getDate() + this.step3StartDays);
        const step3EndDate = new Date(today);
        step3EndDate.setDate(step3EndDate.getDate() + this.step3EndDays);
        this.step3DateElement.textContent = this.formatDate(step3StartDate) + ' ‚Äì ' + this.formatDate(step3EndDate);
      }

      updateCountdown() {
        const now = new Date();
        const cutoff = new Date();
        cutoff.setHours(this.cutoffHour, this.cutoffMinute, 0, 0);

        if (now > cutoff) {
          cutoff.setDate(cutoff.getDate() + 1);
        }

        const diff = cutoff - now;
        const hours = Math.floor(diff / (1000 * 60 * 60));
        const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((diff % (1000 * 60)) / 1000);

        const hoursStr = String(hours).padStart(2, '0');
        const minutesStr = String(minutes).padStart(2, '0');
        const secondsStr = String(seconds).padStart(2, '0');

        this.countdownElement.textContent = hoursStr + ':' + minutesStr + ':' + secondsStr;
      }
    }

    customElements.define('shipping-timeline-{{ ai_gen_id }}', ShippingTimeline{{ ai_gen_id }});
  })();
</script>

