    <p class="ai-delivery-checker__delivery-date-{{ ai_gen_id }}"></p>
    <p class="ai-delivery-checker__condition-{{ ai_gen_id }}"></p>
  </div>
</delivery-checker-{{ ai_gen_id }}>

<script>
  (function() {
    class DeliveryChecker{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.input = this.querySelector('.ai-delivery-checker__input-{{ ai_gen_id }}');
        this.button = this.querySelector('.ai-delivery-checker__button-{{ ai_gen_id }}');
        this.result = this.querySelector('.ai-delivery-checker__result-{{ ai_gen_id }}');
        this.error = this.querySelector('.ai-delivery-checker__error-{{ ai_gen_id }}');
        this.deliveryDate = this.querySelector('.ai-delivery-checker__delivery-date-{{ ai_gen_id }}');
        this.condition = this.querySelector('.ai-delivery-checker__condition-{{ ai_gen_id }}');
        
        this.insideDhakaDays = parseInt(this.dataset.insideDhakaDays) || 2;
        this.outsideDhakaDays = parseInt(this.dataset.outsideDhakaDays) || 5;
        this.cutoffHour = parseInt(this.dataset.cutoffHour) || 16;
        this.cutoffMinute = parseInt(this.dataset.cutoffMinute) || 33;
      }

      connectedCallback() {
        this.button.addEventListener('click', () => this.checkDelivery());
        this.input.addEventListener('keypress', (e) => {
          if (e.key === 'Enter') {
            this.checkDelivery();
          }
        });
        
        this.input.addEventListener('input', () => {
          this.error.classList.remove('active');
        });
      }

      checkDelivery() {
        const city = this.input.value.trim().toLowerCase();
        
        if (!city) {
          this.showError('Please enter your city');
          return;
        }

        const isDhaka = city.includes('dhaka') || city.includes('ঢাকা');
        const deliveryDays = isDhaka ? this.insideDhakaDays : this.outsideDhakaDays;
        
        const now = new Date();
        const currentHour = now.getHours();
        const currentMinute = now.getMinutes();
        
        const cutoffTime = this.cutoffHour * 60 + this.cutoffMinute;
        const currentTime = currentHour * 60 + currentMinute;
        
        let daysToAdd = deliveryDays;
        if (currentTime >= cutoffTime) {
          daysToAdd += 1;
        }
        
        const deliveryDate = new Date(now);
        deliveryDate.setDate(deliveryDate.getDate() + daysToAdd);
        
        while (deliveryDate.getDay() === 5) {
          deliveryDate.setDate(deliveryDate.getDate() + 1);
        }
        
        const options = { day: 'numeric', month: 'short', weekday: 'long' };
        const formattedDate = deliveryDate.toLocaleDateString('en-US', options);
        
        const cutoffDate = new Date(now);
        cutoffDate.setHours(this.cutoffHour, this.cutoffMinute, 0, 0);
        
        let conditionText = '';
        if (currentTime < cutoffTime) {
          const timeLeft = cutoffDate - now;
          const hoursLeft = Math.floor(timeLeft / (1000 * 60 * 60));
          const minutesLeft = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
          conditionText = `if ordered within ${hoursLeft}h ${minutesLeft}m`;
        } else {
          conditionText = 'order placed after cutoff time';
        }
        
        this.deliveryDate.textContent = formattedDate;
        this.condition.textContent = conditionText;
        
        this.error.classList.remove('active');
        this.result.classList.add('active');
      }

      showError(message) {
        this.error.textContent = message;
        this.error.classList.add('active');
        this.result.classList.remove('active');
      }
    }

    customElements.define('delivery-checker-{{ ai_gen_id }}', DeliveryChecker{{ ai_gen_id }});
  })();
</script>

