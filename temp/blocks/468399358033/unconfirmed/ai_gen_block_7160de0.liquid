    margin: 0 auto;
  }

  .ai-delivery-checker__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 16px;
    text-align: center;
    font-weight: 600;
  }

  .ai-delivery-checker__input-wrapper-{{ ai_gen_id }} {
    position: relative;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
    background-color: #ffffff;
    box-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity }});
  }

  .ai-delivery-checker__input-wrapper-{{ ai_gen_id }}:hover {
    border-color: {{ block.settings.hover_border_color }};
  }

  .ai-delivery-checker__input-wrapper-{{ ai_gen_id }}:focus-within {
    border-color: {{ block.settings.hover_border_color }};
  }

  .ai-delivery-checker__input-group-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 12px 16px;
  }

  .ai-delivery-checker__input-{{ ai_gen_id }} {
    flex: 1;
    border: none;
    outline: none;
    font-size: 14px;
    color: {{ block.settings.text_color }};
    background: transparent;
  }

