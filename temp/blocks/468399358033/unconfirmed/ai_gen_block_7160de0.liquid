<delivery-checker-{{ ai_gen_id }}
  class="ai-delivery-checker-{{ ai_gen_id }}"
  data-inside-dhaka-days="{{ block.settings.inside_dhaka_days }}"
  data-outside-dhaka-days="{{ block.settings.outside_dhaka_days }}"
  data-cutoff-time="{{ block.settings.cutoff_time }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-delivery-checker__container-{{ ai_gen_id }}">
    <h3 class="ai-delivery-checker__title-{{ ai_gen_id }}">{{ block.settings.title }}</h3>

    <div class="ai-delivery-checker__input-wrapper-{{ ai_gen_id }}">
      <div class="ai-delivery-checker__input-group-{{ ai_gen_id }}">
        <input
          type="text"
          class="ai-delivery-checker__input-{{ ai_gen_id }}"
          placeholder="{{ block.settings.placeholder }}"
          aria-label="Enter your city"
        >
        <button
          type="button"
          class="ai-delivery-checker__button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_text }}
        </button>
      </div>
    </div>

    <div class="ai-delivery-checker__result-{{ ai_gen_id }}">
      <p class="ai-delivery-checker__delivery-date-{{ ai_gen_id }}">
        {{ block.settings.delivery_by_text }} <span class="delivery-date-value"></span>
      </p>
      <p class="ai-delivery-checker__condition-{{ ai_gen_id }}">
        {{ block.settings.condition_text }} <span class="cutoff-time-value"></span>
      </p>
    </div>

    <div class="ai-delivery-checker__error-{{ ai_gen_id }}">
      {{ block.settings.error_message }}
    </div>
  </div>
</delivery-checker-{{ ai_gen_id }}>

<script>
  (function() {
    class DeliveryChecker{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.input = this.querySelector('.ai-delivery-checker__input-{{ ai_gen_id }}');
        this.button = this.querySelector('.ai-delivery-checker__button-{{ ai_gen_id }}');
        this.result = this.querySelector('.ai-delivery-checker__result-{{ ai_gen_id }}');
        this.error = this.querySelector('.ai-delivery-checker__error-{{ ai_gen_id }}');
        this.deliveryDateValue = this.querySelector('.delivery-date-value');
        this.cutoffTimeValue = this.querySelector('.cutoff-time-value');
        
        this.insideDhakaDays = parseInt(this.dataset.insideDhakaDays) || 1;
        this.outsideDhakaDays = parseInt(this.dataset.outsideDhakaDays) || 3;
        this.cutoffTime = this.dataset.cutoffTime || '16:33';
        
        this.dhakaKeywords = ['dhaka', 'ঢাকা'];
      }

      connectedCallback() {
        this.button.addEventListener('click', () => this.checkDelivery());
        this.input.addEventListener('keypress', (e) => {
          if (e.key === 'Enter') {
            this.checkDelivery();
          }
        });
        
        this.input.addEventListener('input', () => {
          this.result.classList.remove('active');
          this.error.classList.remove('active');
        });
      }

      checkDelivery() {
        const city = this.input.value.trim().toLowerCase();
        
        if (!city) {
          this.showError();
          return;
        }
        
        const isDhaka = this.dhakaKeywords.some(keyword => city.includes(keyword));
        const deliveryDays = isDhaka ? this.insideDhakaDays : this.outsideDhakaDays;
        
        const deliveryDate = this.calculateDeliveryDate(deliveryDays);
        
        this.deliveryDateValue.textContent = deliveryDate;
        this.cutoffTimeValue.textContent = this.cutoffTime;
        
        this.error.classList.remove('active');
        this.result.classList.add('active');
      }

      calculateDeliveryDate(daysToAdd) {
        const now = new Date();
        const cutoffParts = this.cutoffTime.split(':');
        const cutoffHour = parseInt(cutoffParts[0]);
        const cutoffMinute = parseInt(cutoffParts[1]);
        
        const cutoffToday = new Date();
        cutoffToday.setHours(cutoffHour, cutoffMinute, 0, 0);
        
        let deliveryDate = new Date();
        
        if (now > cutoffToday) {
          daysToAdd += 1;
        }
        
        deliveryDate.setDate(deliveryDate.getDate() + daysToAdd);
        
        const days = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];
        const months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
        
        const dayName = days[deliveryDate.getDay()];
        const date = deliveryDate.getDate();
        const month = months[deliveryDate.getMonth()];
        
        return date + ' ' + month + ', ' + dayName;
      }

      showError() {
        this.result.classList.remove('active');
        this.error.classList.add('active');
      }
    }

    customElements.define('delivery-checker-{{ ai_gen_id }}', DeliveryChecker{{ ai_gen_id }});
  })();
</script>

