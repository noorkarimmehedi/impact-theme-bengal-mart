{% doc %}
  @prompt
    This layout uses a clean, two-column table style design. Left side shows section titles like Description, Details, Wash Care, and Shipping. Right side contains clear, structured content. Minimal borders, uppercase headings, consistent spacing, and readable typography enhance clarity, professionalism, and easy scanning for users. the colors should be customizable , in mobile version it should be in This layout uses a clean, two-column table style design, i don't need any divider between Row and also  , the section must have a black border around the section with customizable border radius. also all text content should be in the section and border
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-info-table-{{ ai_gen_id }} {
    width: 100%;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding }}px;
    border-radius: {{ block.settings.border_radius }}px;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
  }

  .ai-product-info-table__row-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: {{ block.settings.label_width }}% 1fr;
    gap: {{ block.settings.column_gap }}px;
    padding: {{ block.settings.row_padding }}px 0;
  }

  .ai-product-info-table__label-{{ ai_gen_id }} {
    font-size: {{ block.settings.label_font_size }}px;
    font-weight: {{ block.settings.label_font_weight }};
    color: {{ block.settings.label_color }};
    text-transform: {{ block.settings.label_text_transform }};
    letter-spacing: {{ block.settings.label_letter_spacing }}px;
    line-height: 1.5;
  }

  .ai-product-info-table__content-{{ ai_gen_id }} {
    font-size: {{ block.settings.content_font_size }}px;
    color: {{ block.settings.content_color }};
    line-height: 1.6;
  }

  .ai-product-info-table__content-{{ ai_gen_id }} p {
    margin: 0 0 8px 0;
  }

  .ai-product-info-table__content-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-product-info-table__content-{{ ai_gen_id }} ul,
  .ai-product-info-table__content-{{ ai_gen_id }} ol {
    margin: 0;
    padding-left: 20px;
  }

  .ai-product-info-table__content-{{ ai_gen_id }} li {
    margin-bottom: 4px;
  }

  @media screen and (max-width: 749px) {
    .ai-product-info-table-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_mobile }}px;
    }

    .ai-product-info-table__row-{{ ai_gen_id }} {
      grid-template-columns: {{ block.settings.label_width_mobile }}% 1fr;
      gap: {{ block.settings.column_gap_mobile }}px;
    }

    .ai-product-info-table__label-{{ ai_gen_id }} {
      font-size: {{ block.settings.label_font_size_mobile }}px;
    }

    .ai-product-info-table__content-{{ ai_gen_id }} {
      font-size: {{ block.settings.content_font_size_mobile }}px;
    }
  }
{% endstyle %}

<div class="ai-product-info-table-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.row_1_label != blank or block.settings.row_1_content != blank %}
    <div class="ai-product-info-table__row-{{ ai_gen_id }}">
      <div class="ai-product-info-table__label-{{ ai_gen_id }}">
        {{ block.settings.row_1_label }}
      </div>
      <div class="ai-product-info-table__content-{{ ai_gen_id }}">
        {{ block.settings.row_1_content }}
      </div>
    </div>
  {% endif %}

  {% if block.settings.row_2_label != blank or block.settings.row_2_content != blank %}
