{% doc %}
  @prompt
    create a custom text with icon section with all customizable
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-text-icon-block-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px {{ block.settings.padding_horizontal }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    text-align: {{ block.settings.text_alignment }};
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-text-icon-content-{{ ai_gen_id }} {
    display: flex;
    align-items: {{ block.settings.vertical_alignment }};
    justify-content: {{ block.settings.content_alignment }};
    gap: {{ block.settings.icon_text_spacing }}px;
    flex-direction: {% if block.settings.layout == 'icon_top' %}column{% elsif block.settings.layout == 'icon_bottom' %}column-reverse{% elsif block.settings.layout == 'icon_right' %}row-reverse{% else %}row{% endif %};
  }

  .ai-text-icon-icon-wrapper-{{ ai_gen_id }} {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    background-color: {{ block.settings.icon_background_color }};
    border-radius: {{ block.settings.icon_border_radius }}px;
    border: {{ block.settings.icon_border_width }}px solid {{ block.settings.icon_border_color }};
  }

  .ai-text-icon-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size | times: 0.6 }}px;
    height: {{ block.settings.icon_size | times: 0.6 }}px;
    color: {{ block.settings.icon_color }};
    stroke-width: {{ block.settings.icon_stroke_width }};
  }

  .ai-text-icon-text-wrapper-{{ ai_gen_id }} {
    flex-grow: 1;
  }

  .ai-text-icon-heading-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.heading_bottom_spacing }}px 0;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: {{ block.settings.heading_weight }};
    line-height: {{ block.settings.heading_line_height }};
    letter-spacing: {{ block.settings.heading_letter_spacing }}px;
    text-transform: {{ block.settings.heading_text_transform }};
  }

  .ai-text-icon-text-{{ ai_gen_id }} {
    margin: 0;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    font-weight: {{ block.settings.text_weight }};
    line-height: {{ block.settings.text_line_height }};
    letter-spacing: {{ block.settings.text_letter_spacing }}px;
  }

  .ai-text-icon-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    margin-top: {{ block.settings.button_top_spacing }}px;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: {{ block.settings.button_text_weight }};
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .ai-text-icon-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
    transform: translateY({{ block.settings.button_hover_transform }}px);
  }

  .ai-text-icon-button-icon-{{ ai_gen_id }} {
    width: 16px;
    height: 16px;
    stroke-width: 2;
  }

  @media screen and (max-width: 749px) {
    .ai-text-icon-block-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_padding_top }}px {{ block.settings.mobile_padding_horizontal }}px {{ block.settings.mobile_padding_bottom }}px {{ block.settings.mobile_padding_horizontal }}px;
    }

    .ai-text-icon-content-{{ ai_gen_id }} {
      flex-direction: {% if block.settings.mobile_layout == 'icon_top' %}column{% elsif block.settings.mobile_layout == 'icon_bottom' %}column-reverse{% elsif block.settings.mobile_layout == 'icon_right' %}row-reverse{% else %}row{% endif %};
      gap: {{ block.settings.mobile_icon_text_spacing }}px;
    }

    .ai-text-icon-icon-wrapper-{{ ai_gen_id }} {
      width: {{ block.settings.mobile_icon_size }}px;
      height: {{ block.settings.mobile_icon_size }}px;
    }

    .ai-text-icon-icon-{{ ai_gen_id }} {
      width: {{ block.settings.mobile_icon_size | times: 0.6 }}px;
      height: {{ block.settings.mobile_icon_size | times: 0.6 }}px;
    }

    .ai-text-icon-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_heading_size }}px;
    }

    .ai-text-icon-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_text_size }}px;
    }
  }
{% endstyle %}

<div class="ai-text-icon-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-text-icon-content-{{ ai_gen_id }}">
    {% if block.settings.show_icon %}
      <div class="ai-text-icon-icon-wrapper-{{ ai_gen_id }}">
        {% case block.settings.icon_type %}
          {% when 'heart' %}
            <svg class="ai-text-icon-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z" />
