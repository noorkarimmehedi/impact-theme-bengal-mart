{% doc %}
  @prompt
    create a custom text with icon section with al customizable and also the three icon shoud be in one row in mobile version, don't liked the layout and UI
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-text-icon-section-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background: {{ block.settings.background_color }};
    position: relative;
    overflow: hidden;
  }

  .ai-text-icon-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 2;
  }

  .ai-text-icon-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: {{ block.settings.content_spacing }}px;
  }

  .ai-text-icon-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 700;
    margin: 0 0 {{ block.settings.heading_margin_bottom }}px;
    line-height: 1.2;
    letter-spacing: -0.02em;
  }

  .ai-text-icon-description-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
    margin: 0;
    max-width: 600px;
    {% if block.settings.text_alignment == 'center' %}
      margin-left: auto;
      margin-right: auto;
    {% endif %}
  }

  .ai-text-icon-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.desktop_columns }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    align-items: stretch;
  }

  .ai-text-icon-item-{{ ai_gen_id }} {
    background: {{ block.settings.item_background_color }};
    border-radius: {{ block.settings.item_border_radius }}px;
    padding: {{ block.settings.item_padding }}px;
    text-align: {{ block.settings.icon_alignment }};
    position: relative;
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    border: {{ block.settings.item_border_width }}px solid {{ block.settings.item_border_color }};
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    display: block;
    height: 100%;
  }

  .ai-text-icon-item-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, {{ block.settings.item_hover_background_color }}00 0%, {{ block.settings.item_hover_background_color }}20 100%);
    opacity: 0;
    transition: opacity 0.4s ease;
    z-index: 1;
  }

  .ai-text-icon-item-{{ ai_gen_id }}:hover::before {
    opacity: 1;
  }

  .ai-text-icon-item-{{ ai_gen_id }}:hover {
    transform: translateY({{ block.settings.hover_lift }}px) scale({{ block.settings.hover_scale | divided_by: 100.0 }});
    box-shadow: 
      0 {{ block.settings.hover_shadow_blur }}px {{ block.settings.hover_shadow_spread | plus: 20 }}px rgba(0, 0, 0, {{ block.settings.hover_shadow_opacity | divided_by: 100.0 }}),
      0 {{ block.settings.hover_shadow_blur | divided_by: 2 }}px {{ block.settings.hover_shadow_spread | plus: 10 }}px rgba(0, 0, 0, {{ block.settings.hover_shadow_opacity | divided_by: 200.0 }});
    border-color: {{ block.settings.item_hover_border_color }};
  }

  .ai-text-icon-item-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: {{ block.settings.icon_alignment }};
  }

  .ai-text-icon-icon-wrapper-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    background: linear-gradient(135deg, {{ block.settings.icon_background_color }} 0%, {{ block.settings.icon_gradient_color }} 100%);
    border-radius: {{ block.settings.icon_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: {{ block.settings.icon_margin_bottom }}px;
    position: relative;
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }

  .ai-text-icon-icon-wrapper-{{ ai_gen_id }}::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, {{ block.settings.icon_hover_background_color }} 0%, {{ block.settings.icon_hover_gradient_color }} 100%);
    border-radius: {{ block.settings.icon_border_radius }}px;
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .ai-text-icon-item-{{ ai_gen_id }}:hover .ai-text-icon-icon-wrapper-{{ ai_gen_id }}::after {
    opacity: 1;
  }

  .ai-text-icon-item-{{ ai_gen_id }}:hover .ai-text-icon-icon-wrapper-{{ ai_gen_id }} {
    transform: scale({{ block.settings.icon_hover_scale | divided_by: 100.0 }}) rotate({{ block.settings.icon_rotation }}deg);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
  }

  .ai-text-icon-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size | times: 0.5 }}px;
    height: {{ block.settings.icon_size | times: 0.5 }}px;
    color: {{ block.settings.icon_color }};
    transition: all 0.4s ease;
    position: relative;
    z-index: 3;
    stroke-width: {{ block.settings.icon_stroke_width }};
  }

  .ai-text-icon-item-{{ ai_gen_id }}:hover .ai-text-icon-icon-{{ ai_gen_id }} {
    color: {{ block.settings.icon_hover_color }};
  }

  .ai-text-icon-item-title-{{ ai_gen_id }} {
    color: {{ block.settings.item_title_color }};
    font-size: {{ block.settings.item_title_size }}px;
    font-weight: {{ block.settings.item_title_weight }};
    margin: 0 0 {{ block.settings.item_title_margin_bottom }}px;
    line-height: 1.3;
    transition: color 0.3s ease;
    letter-spacing: -0.01em;
  }

  .ai-text-icon-item-{{ ai_gen_id }}:hover .ai-text-icon-item-title-{{ ai_gen_id }} {
    color: {{ block.settings.item_title_hover_color }};
  }

  .ai-text-icon-item-description-{{ ai_gen_id }} {
    color: {{ block.settings.item_text_color }};
    font-size: {{ block.settings.item_text_size }}px;
    line-height: 1.6;
    margin: 0;
    transition: color 0.3s ease;
    flex-grow: 1;
  }

  .ai-text-icon-item-{{ ai_gen_id }}:hover .ai-text-icon-item-description-{{ ai_gen_id }} {
    color: {{ block.settings.item_text_hover_color }};
  }

  .ai-text-icon-decorative-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    right: 0;
    width: 100px;
    height: 100px;
    background: linear-gradient(135deg, {{ block.settings.decorative_color }}20 0%, {{ block.settings.decorative_color }}05 100%);
    border-radius: 50%;
    transform: translate(30px, -30px);
    z-index: 1;
  }

  @media screen and (max-width: 749px) {
    .ai-text-icon-section-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_section_padding_top }}px 0 {{ block.settings.mobile_section_padding_bottom }}px;
    }

    .ai-text-icon-container-{{ ai_gen_id }} {
      padding: 0 16px;
    }

    .ai-text-icon-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(3, 1fr);
      gap: {{ block.settings.mobile_grid_gap }}px;
    }

    .ai-text-icon-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_heading_size }}px;
    }

    .ai-text-icon-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_text_size }}px;
    }

    .ai-text-icon-item-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_item_padding }}px;
    }

    .ai-text-icon-icon-wrapper-{{ ai_gen_id }} {
      width: {{ block.settings.mobile_icon_size }}px;
      height: {{ block.settings.mobile_icon_size }}px;
      margin-bottom: {{ block.settings.mobile_icon_margin_bottom }}px;
    }

    .ai-text-icon-icon-{{ ai_gen_id }} {
      width: {{ block.settings.mobile_icon_size | times: 0.5 }}px;
      height: {{ block.settings.mobile_icon_size | times: 0.5 }}px;
    }

    .ai-text-icon-item-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_item_title_size }}px;
    }

    .ai-text-icon-item-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_item_text_size }}px;
    }

    .ai-text-icon-decorative-{{ ai_gen_id }} {
      width: 60px;
      height: 60px;
      transform: translate(20px, -20px);
    }
  }
{% endstyle %}

<div class="ai-text-icon-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-text-icon-decorative-{{ ai_gen_id }}"></div>
  
  <div class="ai-text-icon-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.description != blank %}
      <div class="ai-text-icon-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-text-icon-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.description != blank %}
          <div class="ai-text-icon-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-text-icon-grid-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign icon_key = 'icon_' | append: i
          assign title_key = 'title_' | append: i
          assign description_key = 'description_' | append: i
          assign link_key = 'link_' | append: i

          assign icon = block.settings[icon_key]
          assign title = block.settings[title_key]
          assign description = block.settings[description_key]
          assign link = block.settings[link_key]
        %}

        {% if link != blank %}
          <a href="{{ link }}" class="ai-text-icon-item-{{ ai_gen_id }}">
        {% else %}
          <div class="ai-text-icon-item-{{ ai_gen_id }}">
        {% endif %}

          <div class="ai-text-icon-item-content-{{ ai_gen_id }}">
            <div class="ai-text-icon-icon-wrapper-{{ ai_gen_id }}">
              {% case icon %}
                {% when 'star' %}
                  <svg class="ai-text-icon-icon-{{ ai_gen_id }}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <polygon points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26"></polygon>
                  </svg>
                {% when 'heart' %}
                  <svg class="ai-text-icon-icon-{{ ai_gen_id }}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                  </svg>
                {% when 'shield' %}
                  <svg class="ai-text-icon-icon-{{ ai_gen_id }}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                  </svg>
                {% when 'truck' %}
                  <svg class="ai-text-icon-icon-{{ ai_gen_id }}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <rect x="1" y="3" width="15" height="13"></rect>
                    <polygon points="16,8 20,8 23,11 23,16 16,16"></polygon>
                    <circle cx="5.5" cy="18.5" r="2.5"></circle>
                    <circle cx="18.5" cy="18.5" r="2.5"></circle>
                  </svg>
                {% when 'gift' %}
                  <svg class="ai-text-icon-icon-{{ ai_gen_id }}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <polyline points="20,12 20,22 4,22 4,12"></polyline>
                    <rect x="2" y="7" width="20" height="5"></rect>
                    <line x1="12" y1="22" x2="12" y2="7"></line>
                    <path d="M12 7H7.5a2.5 2.5 0 0 1 0-5C11 2 12 7 12 7z"></path>
                    <path d="M12 7h4.5a2.5 2.5 0 0 0 0-5C13 2 12 7 12 7z"></path>
                  </svg>
                {% when 'clock' %}
                  <svg class="ai-text-icon-icon-{{ ai_gen_id }}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <circle cx="12" cy="12" r="10"></circle>
                    <polyline points="12,6 12,12 16,14"></polyline>
                  </svg>
                {% when 'phone' %}
                  <svg class="ai-text-icon-icon-{{ ai_gen_id }}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                  </svg>
                {% when 'mail' %}
                  <svg class="ai-text-icon-icon-{{ ai_gen_id }}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                    <polyline points="22,6 12,13 2,6"></polyline>
                  </svg>
                {% when 'check' %}
                  <svg class="ai-text-icon-icon-{{ ai_gen_id }}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <polyline points="20,6 9,17 4,12"></polyline>
                  </svg>
                {% when 'thumbs_up' %}
                  <svg class="ai-text-icon-icon-{{ ai_gen_id }}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path d="M14 9V5a3 3 0 0 0-3-3l-4 9v11h11.28a2 2 0 0 0 2-1.7l1.38-9a2 2 0 0 0-2-2.3zM7 22H4a2 2 0 0 1-2-2v-7a2 2 0 0 1 2-2h3"></path>
                  </svg>
                {% when 'users' %}
                  <svg class="ai-text-icon-icon-{{ ai_gen_id }}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                    <circle cx="9" cy="7" r="4"></circle>
                    <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                  </svg>
                {% when 'diamond' %}
                  <svg class="ai-text-icon-icon-{{ ai_gen_id }}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <polygon points="6,3 18,3 22,9 12,20 2,9"></polygon>
                  </svg>
                {% when 'zap' %}
                  <svg class="ai-text-icon-icon-{{ ai_gen_id }}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <polygon points="13,2 3,14 12,14 11,22 21,10 12,10"></polygon>
                  </svg>
                {% else %}
                  <svg class="ai-text-icon-icon-{{ ai_gen_id }}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <polygon points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26"></polygon>
                  </svg>
              {% endcase %}
            </div>

            {% if title != blank %}
              <h3 class="ai-text-icon-item-title-{{ ai_gen_id }}">{{ title }}</h3>
            {% endif %}

            {% if description != blank %}
              <div class="ai-text-icon-item-description-{{ ai_gen_id }}">{{ description }}</div>
            {% endif %}
          </div>

        {% if link != blank %}
          </a>
        {% else %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

