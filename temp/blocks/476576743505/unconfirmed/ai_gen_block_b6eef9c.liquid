<shoppable-video-slider-{{ ai_gen_id }} class="ai-video-slider-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-video-slider-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-video-slider-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-video-slider-wrapper-{{ ai_gen_id }}">
      <div class="ai-video-slider-track-{{ ai_gen_id }}" data-track>
        {% for i in (1..6) %}
          {% liquid
            assign video_key = 'video_' | append: i
            assign product_key = 'product_' | append: i
            assign video = block.settings[video_key]
            assign product = block.settings[product_key]
          %}

          {% if video != blank %}
            <div class="ai-video-slide-{{ ai_gen_id }}">
              <div class="ai-video-slide-inner-{{ ai_gen_id }}">
                <video
                  playsinline
                  muted
                  loop
                  preload="metadata"
                  data-video
                >
                  {% for source in video.sources %}
                    <source src="{{ source.url }}" type="{{ source.mime_type }}">
                  {% endfor %}
                </video>

                {% if product != blank %}
                  <a
                    href="{{ product.url }}"
                    class="ai-video-product-info-{{ ai_gen_id }}"
                  >
                    <h3 class="ai-video-product-name-{{ ai_gen_id }}">{{ product.title }}</h3>
                    <p class="ai-video-product-price-{{ ai_gen_id }}">{{ product.price | money }}</p>
                  </a>
                {% endif %}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>

      {% if block.settings.show_navigation %}
        <button
          class="ai-video-nav-button-{{ ai_gen_id }} ai-video-nav-prev-{{ ai_gen_id }}"
          data-prev
          aria-label="Previous slide"
        >
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        </button>

        <button
          class="ai-video-nav-button-{{ ai_gen_id }} ai-video-nav-next-{{ ai_gen_id }}"
          data-next
          aria-label="Next slide"
        >
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </button>
      {% endif %}
    </div>

    {% if block.settings.show_dots %}
      <div class="ai-video-dots-{{ ai_gen_id }}" data-dots></div>
    {% endif %}
  </div>
</shoppable-video-slider-{{ ai_gen_id }}>

<script>
  (function() {
    class ShoppableVideoSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentIndex = 0;
        this.slidesPerView = {{ block.settings.slides_per_view_desktop }};
        this.autoplayInterval = null;
        this.autoplayDelay = {{ block.settings.autoplay_delay | times: 1000 }};
      }

      connectedCallback() {
        this.track = this.querySelector('[data-track]');
        this.slides = Array.from(this.querySelectorAll('.ai-video-slide-{{ ai_gen_id }}'));
        this.prevButton = this.querySelector('[data-prev]');
        this.nextButton = this.querySelector('[data-next]');
        this.dotsContainer = this.querySelector('[data-dots]');
        this.videos = Array.from(this.querySelectorAll('[data-video]'));

        if (this.slides.length === 0) return;

        this.updateSlidesPerView();
        this.setupEventListeners();
        this.createDots();
        this.updateSlider();

        if ({{ block.settings.autoplay }}) {
          this.startAutoplay();
        }

        this.setupVideoPlayback();
      }

      updateSlidesPerView() {
        if (window.innerWidth <= 749) {
          this.slidesPerView = {{ block.settings.slides_per_view_mobile }};
        } else {
          this.slidesPerView = {{ block.settings.slides_per_view_desktop }};
        }
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.prev());
        }

        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.next());
        }

        window.addEventListener('resize', () => {
          this.updateSlidesPerView();
          this.updateSlider();
        });

        this.addEventListener('mouseenter', () => this.stopAutoplay());
        this.addEventListener('mouseleave', () => {
          if ({{ block.settings.autoplay }}) {
            this.startAutoplay();
          }
        });
      }

      setupVideoPlayback() {
        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            const video = entry.target;
            if (entry.isIntersecting) {
              video.play().catch(() => {});
            } else {
              video.pause();
            }
          });
        }, { threshold: 0.5 });

        this.videos.forEach(video => observer.observe(video));
      }

      createDots() {
        if (!this.dotsContainer) return;

        this.dotsContainer.innerHTML = '';
        const totalDots = Math.ceil(this.slides.length - this.slidesPerView + 1);

        for (let i = 0; i < totalDots; i++) {
          const dot = document.createElement('button');
          dot.className = 'ai-video-dot-{{ ai_gen_id }}';
          dot.setAttribute('aria-label', `Go to slide ${i + 1}`);
          dot.addEventListener('click', () => this.goToSlide(i));
          this.dotsContainer.appendChild(dot);
        }

        this.updateDots();
      }

      updateDots() {
        if (!this.dotsContainer) return;

        const dots = this.dotsContainer.querySelectorAll('.ai-video-dot-{{ ai_gen_id }}');
        dots.forEach((dot, index) => {
          if (index === this.currentIndex) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
      }

      prev() {
        if (this.currentIndex > 0) {
          this.currentIndex--;
          this.updateSlider();
          this.resetAutoplay();
        }
      }

      next() {
        const maxIndex = this.slides.length - this.slidesPerView;
        if (this.currentIndex < maxIndex) {
          this.currentIndex++;
          this.updateSlider();
          this.resetAutoplay();
        }
      }

      goToSlide(index) {
        this.currentIndex = index;
        this.updateSlider();
        this.resetAutoplay();
      }

      updateSlider() {
        const slideWidth = this.slides[0].offsetWidth;
        const gap = {{ block.settings.slide_gap }};
        const offset = -(this.currentIndex * (slideWidth + gap));

        this.track.style.transform = `translateX(${offset}px)`;

        if (this.prevButton) {
          this.prevButton.disabled = this.currentIndex === 0;
        }

        if (this.nextButton) {
          const maxIndex = this.slides.length - this.slidesPerView;
          this.nextButton.disabled = this.currentIndex >= maxIndex;
        }

        this.updateDots();
      }

      startAutoplay() {
        this.stopAutoplay();
        this.autoplayInterval = setInterval(() => {
          const maxIndex = this.slides.length - this.slidesPerView;
          if (this.currentIndex < maxIndex) {
            this.next();
          } else {
            this.currentIndex = 0;
            this.updateSlider();
          }
        }, this.autoplayDelay);
      }

      stopAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }

      resetAutoplay() {
        if ({{ block.settings.autoplay }}) {
          this.startAutoplay();
        }
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }
    }

    customElements.define('shoppable-video-slider-{{ ai_gen_id }}', ShoppableVideoSlider{{ ai_gen_id }});
  })();
</script>

