    }
  }
{% endstyle %}

<product-search-{{ ai_gen_id }}
  class="ai-search-container-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
  data-min-chars="{{ block.settings.min_characters }}"
  data-max-results="{{ block.settings.max_results }}"
>
  <div class="ai-search-wrapper-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-search-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-search-form-{{ ai_gen_id }}">
      <div class="ai-search-input-wrapper-{{ ai_gen_id }}">
        <span class="ai-search-icon-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.35-4.35"></path>
          </svg>
        </span>
        <input
          type="text"
          class="ai-search-input-{{ ai_gen_id }}"
          placeholder="{{ block.settings.placeholder }}"
          autocomplete="off"
          aria-label="Search products"
          aria-autocomplete="list"
          aria-controls="ai-search-suggestions-{{ ai_gen_id }}"
        >
        <button
          type="button"
          class="ai-search-clear-{{ ai_gen_id }}"
          aria-label="Clear search"
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="18" y1="6" x2="6" y2="18"></line>
            <line x1="6" y1="6" x2="18" y2="18"></line>
          </svg>
        </button>
      </div>

      <div
        id="ai-search-suggestions-{{ ai_gen_id }}"
        class="ai-search-suggestions-{{ ai_gen_id }}"
        role="listbox"
      ></div>
    </div>
  </div>
</product-search-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductSearch{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.input = this.querySelector('.ai-search-input-{{ ai_gen_id }}');
        this.clearBtn = this.querySelector('.ai-search-clear-{{ ai_gen_id }}');
        this.suggestions = this.querySelector('.ai-search-suggestions-{{ ai_gen_id }}');
        this.minChars = parseInt(this.dataset.minChars) || 2;
        this.maxResults = parseInt(this.dataset.maxResults) || 5;
        this.searchTimeout = null;
        this.currentRequest = null;
      }

      connectedCallback() {
        this.input.addEventListener('input', this.handleInput.bind(this));
        this.clearBtn.addEventListener('click', this.clearSearch.bind(this));
        document.addEventListener('click', this.handleClickOutside.bind(this));
      }

      disconnectedCallback() {
        document.removeEventListener('click', this.handleClickOutside.bind(this));
      }

      handleInput(event) {
        const query = event.target.value.trim();

        if (query.length > 0) {
          this.clearBtn.classList.add('active');
        } else {
          this.clearBtn.classList.remove('active');
        }

        clearTimeout(this.searchTimeout);

        if (query.length < this.minChars) {
          this.hideSuggestions();
          return;
        }

        this.searchTimeout = setTimeout(() => {
          this.searchProducts(query);
        }, 300);
      }

      async searchProducts(query) {
        if (this.currentRequest) {
          this.currentRequest.abort();
        }

        this.showLoading();

        this.currentRequest = new AbortController();

        try {
          const response = await fetch(
            `/search/suggest.json?q=${encodeURIComponent(query)}&resources[type]=product&resources[limit]=${this.maxResults}`,
            { signal: this.currentRequest.signal }
          );

          if (!response.ok) throw new Error('Search failed');

          const data = await response.json();
          this.displayResults(data.resources.results.products || [], query);
        } catch (error) {
          if (error.name !== 'AbortError') {
            this.showError();
          }
        } finally {
          this.currentRequest = null;
        }
      }

      showLoading() {
        this.suggestions.innerHTML = `
          <div class="ai-search-loading-{{ ai_gen_id }}">
            Searching...
          </div>
        `;
        this.suggestions.classList.add('active');
      }

      showError() {
        this.suggestions.innerHTML = `
          <div class="ai-search-no-results-{{ ai_gen_id }}">
            Something went wrong. Please try again.
          </div>
        `;
      }

      displayResults(products, query) {
        if (products.length === 0) {
          this.suggestions.innerHTML = `
            <div class="ai-search-no-results-{{ ai_gen_id }}">
              No products found for "${this.escapeHtml(query)}"
            </div>
          `;
          this.suggestions.classList.add('active');
          return;
        }

        let html = '';

        products.forEach(product => {
          const imageUrl = product.image ? this.getImageUrl(product.image) : '';
          const price = this.formatMoney(product.price);

          html += `
            <a href="${product.url}" class="ai-search-suggestion-item-{{ ai_gen_id }}" role="option">
              <div class="ai-search-suggestion-image-{{ ai_gen_id }}">
                ${imageUrl ? `<img src="${imageUrl}" alt="${this.escapeHtml(product.title)}" loading="lazy">` : ''}
              </div>
              <div class="ai-search-suggestion-info-{{ ai_gen_id }}">
                <h3 class="ai-search-suggestion-title-{{ ai_gen_id }}">${this.escapeHtml(product.title)}</h3>
                <div class="ai-search-suggestion-price-{{ ai_gen_id }}">${price}</div>
              </div>
            </a>
          `;
        });

        html += `
          <a href="/search?q=${encodeURIComponent(query)}" class="ai-search-view-all-{{ ai_gen_id }}">
            View all results
          </a>
        `;

        this.suggestions.innerHTML = html;
        this.suggestions.classList.add('active');
      }

      getImageUrl(imageUrl) {
        if (!imageUrl) return '';
        if (imageUrl.includes('?')) {
          return imageUrl.split('?')[0] + '?width=120';
        }
        return imageUrl + '?width=120';
      }

      formatMoney(cents) {
        const amount = (cents / 100).toFixed(2);
        return `{{ cart.currency.symbol }}${amount}`;
      }

      escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
      }

      clearSearch() {
        this.input.value = '';
        this.clearBtn.classList.remove('active');
        this.hideSuggestions();
        this.input.focus();
      }

      hideSuggestions() {
        this.suggestions.classList.remove('active');
        this.suggestions.innerHTML = '';
      }

      handleClickOutside(event) {
        if (!this.contains(event.target)) {
          this.hideSuggestions();
        }
      }
    }

    customElements.define('product-search-{{ ai_gen_id }}', ProductSearch{{ ai_gen_id }});
  })();
</script>

