    position: relative;
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-offers-slider__track-{{ ai_gen_id }} {
    display: flex;
    gap: 20px;
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding: 10px 0 30px;
  }

  .ai-offers-slider__track-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none;
  }

  .ai-offers-slider__card-wrapper-{{ ai_gen_id }} {
    position: relative;
    flex: 0 0 auto;
    width: {{ block.settings.card_width }}px;
    cursor: pointer;
    user-select: none;
    touch-action: manipulation;
  }

  .ai-offers-slider__shadow-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: {{ block.settings.card_border_radius }}px;
    background: {{ block.settings.shadow_color }};
    opacity: {{ block.settings.shadow_opacity | divided_by: 100.0 }};
    will-change: transform;
    transform: translateY(2px);
    transition: transform 600ms cubic-bezier(0.3, 0.7, 0.4, 1);
  }

  .ai-offers-slider__edge-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: {{ block.settings.card_border_radius }}px;
    background: linear-gradient(
      to left,
      {{ block.settings.edge_color_dark }} 0%,
      {{ block.settings.edge_color_light }} 8%,
      {{ block.settings.edge_color_light }} 92%,
      {{ block.settings.edge_color_dark }} 100%
    );
    opacity: {{ block.settings.edge_opacity | divided_by: 100.0 }};
  }

  .ai-offers-slider__card-{{ ai_gen_id }} {
    position: relative;
    padding: 24px;
    border-radius: {{ block.settings.card_border_radius }}px;
    background: {{ block.settings.card_background }};
    will-change: transform;
    transform: translateY(-4px);
    transition: transform 600ms cubic-bezier(0.3, 0.7, 0.4, 1);
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
  }

