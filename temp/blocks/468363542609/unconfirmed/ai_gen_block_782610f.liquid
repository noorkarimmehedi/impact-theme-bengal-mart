<offers-slider-{{ ai_gen_id }} class="ai-offers-slider-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-offers-slider__header-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-offers-slider__title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}
    {% if block.settings.subtitle != blank %}
      <p class="ai-offers-slider__subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
    {% endif %}
  </div>

  <div class="ai-offers-slider__container-{{ ai_gen_id }}">
    <div class="ai-offers-slider__track-{{ ai_gen_id }}" data-slider-track>
      {% for i in (1..6) %}
        {% liquid
          assign offer_enabled_key = 'offer_' | append: i | append: '_enabled'
          assign offer_badge_key = 'offer_' | append: i | append: '_badge'
          assign offer_title_key = 'offer_' | append: i | append: '_title'
          assign offer_description_key = 'offer_' | append: i | append: '_description'
          assign offer_code_key = 'offer_' | append: i | append: '_code'

          assign offer_enabled = block.settings[offer_enabled_key]
          assign offer_badge = block.settings[offer_badge_key]
          assign offer_title = block.settings[offer_title_key]
          assign offer_description = block.settings[offer_description_key]
          assign offer_code = block.settings[offer_code_key]
        %}

        {% if offer_enabled %}
          <div class="ai-offers-slider__card-{{ ai_gen_id }}">
            <div class="ai-offers-slider__card-accent-{{ ai_gen_id }}"></div>
            
            <div class="ai-offers-slider__card-header-{{ ai_gen_id }}">
              {% if offer_badge != blank %}
                <span class="ai-offers-slider__badge-{{ ai_gen_id }}">
                  <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
                    <circle cx="12" cy="12" r="10"></circle>
                    <path d="M12 6v6l4 2"></path>
                  </svg>
                  {{ offer_badge }}
                </span>
              {% endif %}

              <div class="ai-offers-slider__icon-{{ ai_gen_id }}">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"></path>
                  <line x1="7" y1="7" x2="7.01" y2="7"></line>
                </svg>
              </div>
            </div>

            <div class="ai-offers-slider__content-{{ ai_gen_id }}">
              {% if offer_title != blank %}
                <h3 class="ai-offers-slider__offer-title-{{ ai_gen_id }}">{{ offer_title }}</h3>
              {% endif %}

              {% if offer_description != blank %}
                <p class="ai-offers-slider__offer-description-{{ ai_gen_id }}">{{ offer_description }}</p>
              {% endif %}
            </div>

            {% if offer_code != blank %}
              <div class="ai-offers-slider__code-section-{{ ai_gen_id }}">
                <span class="ai-offers-slider__code-label-{{ ai_gen_id }}">Use code</span>
                <div class="ai-offers-slider__code-wrapper-{{ ai_gen_id }}">
                  <span class="ai-offers-slider__code-{{ ai_gen_id }}">{{ offer_code }}</span>
                  <button
                    class="ai-offers-slider__copy-btn-{{ ai_gen_id }}"
                    data-code="{{ offer_code }}"
                    aria-label="Copy code {{ offer_code }}"
                  >
                    Copy
                  </button>
                </div>
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% if block.settings.show_navigation %}
      <div class="ai-offers-slider__nav-{{ ai_gen_id }}">
        <button
          class="ai-offers-slider__nav-btn-{{ ai_gen_id }}"
          data-nav-prev
          aria-label="Previous offer"
        >
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>
        <button
          class="ai-offers-slider__nav-btn-{{ ai_gen_id }}"
          data-nav-next
          aria-label="Next offer"
        >
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
      </div>
    {% endif %}
  </div>
</offers-slider-{{ ai_gen_id }}>

<script>
  (function() {
    class OffersSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.track = this.querySelector('[data-slider-track]');
        this.prevBtn = this.querySelector('[data-nav-prev]');
        this.nextBtn = this.querySelector('[data-nav-next]');
        this.copyButtons = this.querySelectorAll('.ai-offers-slider__copy-btn-{{ ai_gen_id }}');

        this.setupCopyButtons();
        this.setupNavigation();
      }

      setupCopyButtons() {
        this.copyButtons.forEach((button) => {
          button.addEventListener('click', (e) => {
            e.stopPropagation();
            const code = button.getAttribute('data-code');
            
            navigator.clipboard.writeText(code).then(() => {
              const originalText = button.textContent;
              button.textContent = '✓ Copied!';
              button.classList.add('copied');
              
              setTimeout(() => {
                button.textContent = originalText;
                button.classList.remove('copied');
              }, 2000);
            }).catch(() => {
              button.textContent = 'Failed';
              setTimeout(() => {
                button.textContent = 'Copy';
              }, 2000);
            });
          });
        });
      }

      setupNavigation() {
        if (!this.prevBtn || !this.nextBtn) return;

        this.prevBtn.addEventListener('click', () => {
          this.track.scrollBy({
            left: -350,
            behavior: 'smooth'
          });
        });

        this.nextBtn.addEventListener('click', () => {
          this.track.scrollBy({
            left: 350,
            behavior: 'smooth'
          });
        });

        this.track.addEventListener('scroll', () => {
          this.updateNavButtons();
        });

        this.updateNavButtons();
      }

      updateNavButtons() {
        if (!this.prevBtn || !this.nextBtn) return;

        const isAtStart = this.track.scrollLeft <= 0;
        const isAtEnd = this.track.scrollLeft + this.track.clientWidth >= this.track.scrollWidth - 1;

        this.prevBtn.disabled = isAtStart;
        this.nextBtn.disabled = isAtEnd;
      }
    }

    customElements.define('offers-slider-{{ ai_gen_id }}', OffersSlider{{ ai_gen_id }});
  })();
</script>

