<script>
  (function() {
    class OffersCarousel{{ai_gen_id}} extends HTMLElement {
      constructor() {
        super();
        this.currentIndex = 0;
        this.startX = 0;
        this.startY = 0;
        this.currentX = 0;
        this.isDragging = false;
        this.isAnimating = false;
        this.dragThreshold = 80;
      }

      connectedCallback() {
        this.carousel = this.querySelector('[data-carousel]');
        this.cards = Array.from(this.querySelectorAll('.ai-offer-card-{{ ai_gen_id }}'));
        this.dotsContainer = this.querySelector('[data-dots]');
        this.prevBtn = this.querySelector('[data-prev]');
        this.nextBtn = this.querySelector('[data-next]');

        if (this.cards.length === 0) return;

        this.setupDots();
        this.setupEventListeners();
        this.updateCarousel();
      }

      setupDots() {
        if (!this.dotsContainer) return;

        this.cards.forEach((card, index) => {
          const dot = document.createElement('button');
          dot.className = 'ai-offers-dot-{{ ai_gen_id }}';
          dot.setAttribute('aria-label', 'Go to offer ' + (index + 1));
          dot.addEventListener('click', () => {
            if (!this.isAnimating) {
              this.currentIndex = index;
              this.updateCarousel(true);
            }
          });
          this.dotsContainer.appendChild(dot);
        });
      }

      setupEventListeners() {
        this.cards.forEach(card => {
          card.addEventListener('mousedown', this.handleDragStart.bind(this));
          card.addEventListener('touchstart', this.handleDragStart.bind(this), { passive: true });
        });

        document.addEventListener('mousemove', this.handleDragMove.bind(this));
        document.addEventListener('touchmove', this.handleDragMove.bind(this), { passive: false });
        document.addEventListener('mouseup', this.handleDragEnd.bind(this));
        document.addEventListener('touchend', this.handleDragEnd.bind(this));

        if (this.prevBtn) {
          this.prevBtn.addEventListener('click', () => this.navigatePrev());
        }

        if (this.nextBtn) {
          this.nextBtn.addEventListener('click', () => this.navigateNext());
        }

        const copyButtons = this.querySelectorAll('.ai-offer-copy-btn-{{ ai_gen_id }}');
        copyButtons.forEach(btn => {
          btn.addEventListener('click', this.handleCopy.bind(this));
        });
      }

      handleDragStart(e) {
        if (this.isAnimating) return;
        
        const card = e.currentTarget;
        const cardIndex = parseInt(card.getAttribute('data-offer-index'));
        
        if (cardIndex !== this.currentIndex) return;

        this.isDragging = true;
        this.startX = e.type.includes('mouse') ? e.pageX : e.touches[0].pageX;
        this.startY = e.type.includes('mouse') ? e.pageY : e.touches[0].pageY;
        this.currentX = 0;

        card.classList.add('swiping');
      }

      handleDragMove(e) {
        if (!this.isDragging) return;

        const currentCard = this.cards[this.currentIndex];
        const moveX = e.type.includes('mouse') ? e.pageX : e.touches[0].pageX;
        const moveY = e.type.includes('mouse') ? e.pageY : e.touches[0].pageY;
        
        this.currentX = moveX - this.startX;
        const currentY = moveY - this.startY;

        if (Math.abs(this.currentX) > Math.abs(currentY) && Math.abs(this.currentX) > 10) {
          e.preventDefault();
        }

        const progress = Math.min(Math.abs(this.currentX) / 300, 1);
        const rotation = (this.currentX / 25) * progress;
        const yOffset = -Math.abs(this.currentX) / 8;
        const scale = 1 - (progress * 0.15);
        const opacity = 1 - (progress * 0.5);

        currentCard.style.transform = `translateX(${this.currentX}px) translateY(${yOffset}px) translateZ(0) scale(${scale}) rotateZ(${rotation}deg)`;
        currentCard.style.opacity = opacity;
      }

      handleDragEnd(e) {
        if (!this.isDragging) return;

        this.isDragging = false;
        const currentCard = this.cards[this.currentIndex];
        currentCard.classList.remove('swiping');

        if (Math.abs(this.currentX) > this.dragThreshold) {
          this.swipeCard(this.currentX > 0 ? 'right' : 'left');
        } else {
          currentCard.classList.add('animating');
          currentCard.style.transform = '';
          currentCard.style.opacity = '';
          
          setTimeout(() => {
            currentCard.classList.remove('animating');
          }, 600);
        }

        this.currentX = 0;
      }

      swipeCard(direction) {
        if (this.isAnimating) return;
        
        this.isAnimating = true;
        const currentCard = this.cards[this.currentIndex];

        currentCard.classList.add('animating');
        currentCard.classList.add(direction === 'left' ? 'swiped-left' : 'swiped-right');

        setTimeout(() => {
          currentCard.style.transform = '';
          currentCard.style.opacity = '';
          currentCard.classList.remove('animating', 'swiped-left', 'swiped-right');
          
          this.currentIndex = (this.currentIndex + 1) % this.cards.length;
          this.updateCarousel(true);
          
          setTimeout(() => {
            this.isAnimating = false;
          }, 100);
        }, 600);
      }

      navigateNext() {
        if (this.isAnimating) return;
        this.swipeCard('left');
      }

      navigatePrev() {
        if (this.isAnimating) return;
        
        this.isAnimating = true;
        this.currentIndex = (this.currentIndex - 1 + this.cards.length) % this.cards.length;
        this.updateCarousel(true);
        
        setTimeout(() => {
          this.isAnimating = false;
        }, 600);
      }

      updateCarousel(animate = false) {
        this.cards.forEach((card, index) => {
          if (animate) {
            card.classList.add('animating');
          }

          card.classList.remove('position-0', 'position-1', 'position-2', 'position-behind');

          const position = (index - this.currentIndex + this.cards.length) % this.cards.length;

          if (position === 0) {
            card.classList.add('position-0');
          } else if (position === 1) {
            card.classList.add('position-1');
          } else if (position === 2) {
            card.classList.add('position-2');
          } else {
            card.classList.add('position-behind');
          }

          if (animate) {
            setTimeout(() => {
              card.classList.remove('animating');
            }, 600);
          }
        });

        if (this.dotsContainer) {
          const dots = this.dotsContainer.querySelectorAll('.ai-offers-dot-{{ ai_gen_id }}');
          dots.forEach((dot, index) => {
            dot.classList.toggle('active', index === this.currentIndex);
          });
        }
      }

      handleCopy(e) {
        const button = e.currentTarget;
        const code = button.getAttribute('data-code');

        navigator.clipboard.writeText(code).then(() => {
          const originalText = button.textContent;
          button.textContent = 'Copied!';
          button.classList.add('copied');

          setTimeout(() => {
            button.textContent = originalText;
            button.classList.remove('copied');
          }, 2000);
        });
      }
    }

    customElements.define('offers-carousel-{{ ai_gen_id }}', OffersCarousel{{ai_gen_id}});
  })();
</script>

