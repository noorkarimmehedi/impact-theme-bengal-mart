<script>
  (function() {
    class PricingDisplay{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.toggleLink = this.querySelector('[data-toggle-breakdown]');
        this.breakdown = this.querySelector('[data-breakdown]');

        if (this.toggleLink && this.breakdown) {
          this.toggleLink.addEventListener('click', this.handleToggle.bind(this));
        }
      }

      handleToggle(event) {
        event.preventDefault();
        this.breakdown.classList.toggle('hidden');
        
        if (!this.breakdown.classList.contains('hidden')) {
          this.breakdown.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }
      }
    }

    customElements.define('pricing-display-{{ ai_gen_id }}', PricingDisplay{{ ai_gen_id }});
  })();
</script>

