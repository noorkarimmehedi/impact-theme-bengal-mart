    font-weight: 700;
    color: {{ block.settings.breakdown_title_color }};
    margin: 0 0 8px 0;
    line-height: 1.2;
  }

  .ai-pricing-breakdown-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.breakdown_subtitle_size }}px;
    color: {{ block.settings.breakdown_subtitle_color }};
    margin: 0;
    line-height: 1.4;
  }

  .ai-pricing-timeline-{{ ai_gen_id }} {
    position: relative;
    padding-left: 40px;
  }

  .ai-pricing-timeline-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    left: 15px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(to bottom, {{ block.settings.timeline_line_color }} 0%, {{ block.settings.timeline_line_color }} 100%);
  }

  .ai-pricing-step-{{ ai_gen_id }} {
    position: relative;
    margin-bottom: 24px;
    padding-bottom: 24px;
  }

  .ai-pricing-step-{{ ai_gen_id }}:last-child {
    margin-bottom: 0;
    padding-bottom: 0;
  }

  .ai-pricing-step-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    left: -28px;
    top: 4px;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: {{ block.settings.timeline_dot_color }};
    border: 2px solid {{ block.settings.breakdown_bg_color }};
    z-index: 1;
  }

  .ai-pricing-step-final-{{ ai_gen_id }}::before {
