  .ai-pricing-teaser-link-{{ ai_gen_id }} {
    font-size: {{ block.settings.teaser_link_size }}px;
    font-weight: 500;
    color: {{ block.settings.teaser_link_color }};
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 4px;
    cursor: pointer;
    transition: opacity 0.2s ease;
    white-space: nowrap;
  }

  .ai-pricing-teaser-link-{{ ai_gen_id }}:hover {
    opacity: 0.8;
  }

  .ai-pricing-teaser-arrow-{{ ai_gen_id }} {
    font-size: 14px;
    transition: transform 0.3s ease;
  }

  .ai-pricing-teaser-link-{{ ai_gen_id }}:hover .ai-pricing-teaser-arrow-{{ ai_gen_id }} {
    transform: translateX(3px);
  }

  .ai-pricing-breakdown-{{ ai_gen_id }} {
