    generate me a slideshow for home page hero. the two button with adjustable colors and radius. also on mobile version the both text and buttons should be in the bottom and n desktop version it should be on the bottom left.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-slideshow-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.height_mobile }}px;
    overflow: hidden;
  }

  @media screen and (min-width: 750px) {
    .ai-hero-slideshow-{{ ai_gen_id }} {
      height: {{ block.settings.height_desktop }}px;
    }
  }

  .ai-hero-slideshow__slides-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .ai-hero-slideshow__slide-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 0.6s ease-in-out;
    pointer-events: none;
  }

  .ai-hero-slideshow__slide-{{ ai_gen_id }}.active {
    opacity: 1;
    pointer-events: auto;
  }

  .ai-hero-slideshow__slide-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-hero-slideshow__slide-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-hero-slideshow__slide-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-hero-slideshow__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
  }

  .ai-hero-slideshow__content-{{ ai_gen_id }} {
    position: absolute;
    bottom: 40px;
    left: 0;
    right: 0;
    padding: 0 20px;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  @media screen and (min-width: 750px) {
    .ai-hero-slideshow__content-{{ ai_gen_id }} {
      bottom: 60px;
      left: 60px;
      right: auto;
      align-items: flex-start;
      text-align: left;
      max-width: 600px;
    }
  }

  .ai-hero-slideshow__heading-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.heading_size_mobile }}px;
    margin: 0 0 16px;
    line-height: 1.2;
  }

  @media screen and (min-width: 750px) {
    .ai-hero-slideshow__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size_desktop }}px;
    }
  }

  .ai-hero-slideshow__subheading-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.subheading_size_mobile }}px;
    margin: 0 0 24px;
    line-height: 1.4;
  }

  @media screen and (min-width: 750px) {
    .ai-hero-slideshow__subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size_desktop }}px;
    }
  }

  .ai-hero-slideshow__buttons-{{ ai_gen_id }} {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
    justify-content: center;
  }

  @media screen and (min-width: 750px) {
    .ai-hero-slideshow__buttons-{{ ai_gen_id }} {
      justify-content: flex-start;
    }
  }

  .ai-hero-slideshow__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 14px 28px;
    text-decoration: none;
    font-size: 16px;
    font-weight: 500;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .ai-hero-slideshow__button-primary-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_primary_bg }};
    color: {{ block.settings.button_primary_color }};
    border-radius: {{ block.settings.button_primary_radius }}px;
    border-color: {{ block.settings.button_primary_bg }};
  }

  .ai-hero-slideshow__button-primary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_primary_hover_bg }};
    border-color: {{ block.settings.button_primary_hover_bg }};
  }

  .ai-hero-slideshow__button-secondary-{{ ai_gen_id }} {
