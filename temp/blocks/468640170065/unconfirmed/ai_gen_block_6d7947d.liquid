    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: {{ block.settings.text_color }};
    opacity: 0.4;
    cursor: pointer;
    transition: opacity 0.3s ease;
    border: none;
    padding: 0;
  }

  .ai-hero-slideshow__dot-{{ ai_gen_id }}.active {
    opacity: 1;
  }

  .ai-hero-slideshow__arrow-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: {{ block.settings.text_color }};
    color: {{ block.settings.overlay_color }};
    border: none;
    width: 44px;
    height: 44px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 3;
    opacity: 0.8;
    transition: opacity 0.3s ease;
  }

