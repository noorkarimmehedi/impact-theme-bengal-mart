    background-color: {{ block.settings.button_secondary_hover_bg }};
    border-color: {{ block.settings.button_secondary_hover_bg }};
  }

  .ai-hero-slideshow__navigation-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 8px;
    z-index: 3;
  }

  @media screen and (min-width: 750px) {
    .ai-hero-slideshow__navigation-{{ ai_gen_id }} {
