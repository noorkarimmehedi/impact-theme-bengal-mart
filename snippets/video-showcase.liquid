<style>
  .video-showcase-section {
    width: 100%;
    padding: 40px 20px;
    background: #ffffff;
  }
  
  .video-showcase-container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    justify-items: center;
  }
  
  .video-showcase-wrapper {
    position: relative;
    width: 100%;
    max-width: 380px;
    aspect-ratio: 9 / 16;
    border-radius: 4px;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
    background: #000;
  }
  
  .video-showcase-player {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  
  .video-showcase-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 20px;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
    color: white;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .video-showcase-wrapper:hover .video-showcase-overlay {
    opacity: 1;
  }
  
  .video-showcase-title {
    font-size: 18px;
    font-weight: 600;
    margin: 0 0 8px 0;
  }
  
  .video-showcase-description {
    font-size: 14px;
    margin: 0;
    opacity: 0.9;
  }
  
  .video-controls {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 10;
  }
  
  .video-play-btn {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.9);
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    opacity: 0;
  }
  
  .video-showcase-wrapper:hover .video-play-btn {
    opacity: 1;
  }
  
  .video-play-btn:hover {
    background: rgba(255, 255, 255, 1);
    transform: scale(1.1);
  }
  
  .video-play-btn svg {
    width: 24px;
    height: 24px;
    margin-left: 3px;
  }
  
  .video-play-btn.playing {
    opacity: 0;
  }
  
  .video-mute-btn {
    position: absolute;
    bottom: 20px;
    right: 20px;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: rgba(0, 0, 0, 0.6);
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    z-index: 10;
  }
  
  .video-mute-btn:hover {
    background: rgba(0, 0, 0, 0.8);
  }
  
  .video-mute-btn svg {
    width: 20px;
    height: 20px;
    fill: white;
  }
  
  @media (max-width: 1024px) {
    .video-showcase-container {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .video-showcase-wrapper:last-child {
      grid-column: 1 / -1;
      max-width: 380px;
      margin: 0 auto;
    }
  }
  
  @media (max-width: 768px) {
    .video-showcase-section {
      padding: 30px 10px;
    }
    
    .video-showcase-container {
      grid-template-columns: repeat(3, 1fr);
      gap: 10px;
    }
    
    .video-showcase-wrapper {
      max-width: 100%;
    }
    
    .video-showcase-wrapper:last-child {
      grid-column: auto;
    }
    
    .video-showcase-title {
      font-size: 14px;
    }
    
    .video-showcase-description {
      font-size: 12px;
    }
    
    .video-mute-btn {
      width: 35px;
      height: 35px;
      bottom: 15px;
      right: 15px;
    }
    
    .video-mute-btn svg {
      width: 16px;
      height: 16px;
    }
    
    .video-play-btn {
      width: 50px;
      height: 50px;
    }
    
    .video-play-btn svg {
      width: 20px;
      height: 20px;
    }
  }
  
  @media (max-width: 480px) {
    .video-showcase-section {
      padding: 20px 8px;
    }
    
    .video-showcase-container {
      gap: 8px;
    }
    
    .video-showcase-title {
      font-size: 12px;
      margin: 0 0 4px 0;
    }
    
    .video-showcase-description {
      font-size: 11px;
    }
    
    .video-showcase-overlay {
      padding: 15px;
    }
  }
</style>

